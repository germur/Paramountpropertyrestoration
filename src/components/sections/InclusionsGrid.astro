---
const { title, content, deliverables } = Astro.props;
---

<section class="section bg-secondary">
  <div class="container">
    <h2 class="section-title text-center mb-4">{title}</h2>
    <p class="text-center text-lg text-secondary mb-12 max-w-4xl mx-auto">{content}</p>
    
    <div class="services-overview-grid">
      {deliverables.map((deliverable, index) => {
        const icons = [
          "fas fa-search", "fas fa-crosshairs", "fas fa-wind", 
          "fas fa-shield-virus", "fas fa-hammer", "fas fa-clipboard-check"
        ];
        
        return (
          <div class="feature-card text-center">
            <div class="feature-icon">
              <i class={icons[index] || "fas fa-tools"}></i>
            </div>
            <h3 class="text-primary font-semibold mb-3">{deliverable.split(' and')[0]}</h3>
            <p class="text-secondary leading-relaxed">{deliverable}</p>
          </div>
        );
      })}
    </div>
  </div>
</section>