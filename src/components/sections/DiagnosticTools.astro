---
const { title, content, warningSignsTitle, warningSigns, assessmentCTA } = Astro.props;
---

<section class="section bg-secondary">
  <div class="container">
    <h2 class="section-title text-center mb-4">{title}</h2>
    <p class="text-center text-lg text-secondary mb-10 max-w-3xl mx-auto">{content}</p>
    
    <div class="grid md:grid-cols-4 gap-8">
      {warningSigns.map((sign, index) => {
        const icons = [
          "fas fa-thermometer-half", "fas fa-exclamation-triangle", 
          "fas fa-tint", "fas fa-eye", "fas fa-chart-line"
        ];
        
        return (
          <div class="feature-card text-center hover:shadow-lg transition-all duration-300">
            <div class="feature-icon mb-4">
              <i class={icons[index] || "fas fa-exclamation-triangle"}></i>
            </div>
            <h3 class="font-bold text-xl mb-2 text-primary">{sign.split(':')[0] || sign}</h3>
            <p class="text-sm text-secondary">{sign.includes(':') ? sign.split(':')[1] : 'Requires immediate professional attention.'}</p>
          </div>
        );
      })}
      
      <!-- CTA Card -->
      <div class="feature-card bg-accent text-white shadow-xl flex flex-col justify-center">
        <h3 class="font-bold text-2xl mb-3">Don't Wait!</h3>
        <p class="text-sm mb-4 opacity-90">Immediate inspection with professional equipment is required.</p>
        <a href="/contact" class="btn bg-white text-primary font-bold py-2 rounded-full hover:bg-gray-100 transition">
          {assessmentCTA}
        </a>
      </div>
    </div>
  </div>
</section>