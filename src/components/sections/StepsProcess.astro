---
const { title, steps } = Astro.props;
---

<section class="section bg-primary">
  <div class="container">
    <h2 class="section-title text-center mb-4">{title}</h2>
    <p class="text-center text-lg text-secondary mb-12 max-w-3xl mx-auto">
      We follow strict IICRC standards to ensure a complete and successful recovery, from mitigation to reconstruction.
    </p>
    
    <div class="grid md:grid-cols-5 gap-6">
      {steps.map((step, index) => (
        <div class="text-center group">
          <div class="w-16 h-16 rounded-full bg-accent bg-opacity-10 flex items-center justify-center mx-auto mb-4 font-bold text-2xl group-hover:shadow-lg group-hover:scale-110 transition-all">
            <i class={`${step.icon} text-accent text-2xl`}></i>
          </div>
          <h3 class="font-bold text-xl mb-1 text-primary">{step.number}. {step.title}</h3>
          <p class="text-sm text-secondary">{step.description}</p>
          
          {/* Separator arrow for desktop */}
          {index < steps.length - 1 && (
            <div class="hidden md:flex items-center justify-center mt-4">
              <i class="fas fa-chevron-right text-gray-300 text-sm"></i>
            </div>
          )}
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="/contact" class="btn btn-primary shadow-lg">
        Get Started With Step 1
      </a>
    </div>
  </div>
</section>