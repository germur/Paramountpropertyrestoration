---
import '../styles/components/Header.css';
import HeaderNav from './HeaderNav.jsx';

// Data for navigation - matching the correct URLs and structure
const navItems = [
  {
    label: 'Home',
    href: '/',
  },
  {
    label: 'Services',
    href: '/services',
    mega: [
      {
        heading: 'Remodeling Services',
        href: '/services',
        items: [
          { label: 'Kitchen', href: '/services/kitchen-remodeling' },
          { label: 'Bathroom', href: '/services/bathroom-remodeling' },
          { label: 'Dining', href: '/services/living-dining-remodeling' },
          { label: 'Bedroom', href: '/services/bedroom-remodeling' },
          { label: 'Home Additions', href: '/services/home-additions-remodeling' },
        ]
      }
    ]
  },
  {
    label: 'Restoration',
    href: '/restoration',
    mega: [
      {
        heading: 'Restoration Services',
        href: '/restoration',
        items: [
          { label: 'Water Damage', href: '/restoration/water-damage' },
          { label: 'Fire', href: '/restoration/fire-damage' },
          { label: 'Mold', href: '/restoration/mold-remediation' },
          { label: 'Storm', href: '/restoration/storm-damage' },
          { label: 'Mitigation', href: '/restoration/mitigation-services' },
        ]
      }
    ]
  },
  {
    label: 'Resources',
    href: '/blog',
    dropdown: [
      { label: 'Blog', href: '/blog' },
      { label: 'Contact', href: '/contact' },
    ]
  },
];

// Get current path for active states
const currentPath = Astro.url.pathname;
---

<HeaderNav 
  client:load 
  navItems={navItems} 
  currentPath={currentPath} 
  logoSrc="/images/LogoPrin.png" 
/>




