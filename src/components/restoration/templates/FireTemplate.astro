    {content.services.map((service, index) => (
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/fireDamage.jpg" alt={`Professional ${service.title.toLowerCase()} restoration services in Florida - smoke and soot cleanup experts`} loading="lazy" />
