    {content.services.map((service) => (
      <a href={service.link} class="service-item-clickable">
        <i class={service.icon}></i>
        <h3>{service.title}</h3>
      </a>
    ))}
  </div>
</section>

<!-- Solutions Cards -->
<section class="solutions-section">
  <div class="container">
  <h2 class="solutions-title">Comprehensive Water Damage Solutions</h2>
  <div class="solutions-grid">
    {content.services.map((service, index) => (
      <div class="solution-card">
        <div class="card-image">
          <img src={service.image} alt={`Professional ${service.title.toLowerCase()} restoration services in Florida - 24/7 emergency response`} loading="lazy" />
        </div>
        <div class="card-content">
