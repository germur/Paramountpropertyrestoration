---
// src/components/restoration/templates/WaterTemplate.astro
// Refactored to use RestorationBaseTemplate
// Reduced from 890 lines to ~25 lines

import BaseLayout from "../../../layouts/BaseLayout.astro";
import "../../../styles/pages/water-damage.css";
import "../../../styles/pages/restoration-responsive.css";
import "../../../styles/global.css";
import RestorationBaseTemplate from "../RestorationBaseTemplate.astro";
import { getRestorationContent } from "../../../data/restoration-content.js";

const { group, sub } = Astro.props;

// Get content from centralized data file
const content = getRestorationContent("water", sub?.slug || group.slug);

// Fallback if content not found
if (!content) {
  console.error(`No content found for water/${sub?.slug || group.slug}`);
}
---

<RestorationBaseTemplate
  content={content}
  type="water"
  group={group}
  sub={sub}
/>
