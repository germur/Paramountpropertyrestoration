<style>
  /* ===== MINIMALIST FOOTER ===== */
  .footer {
    background: #f8f9fa;
    border-top: 1px solid #dee2e6;
    margin-top: auto;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* ===== MAIN FOOTER CONTENT ===== */
  .footer-content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 2rem;
    padding: 2.5rem 0 1.5rem 0;
    align-items: start;
  }

  .footer-section h4 {
    color: #212529;
    margin-bottom: 1rem;
    font-size: 1.2rem;
    font-weight: 700;
  }

  .footer-section h5 {
    color: #495057;
    margin-bottom: 1rem;
    font-size: 1rem;
    font-weight: 600;
  }

  /* ===== MAIN SECTION ===== */
  .company-tagline {
    color: #6c757d;
    margin-bottom: 1.5rem;
    line-height: 1.5;
  }

  .contact-group {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .emergency-contact {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    padding: 1rem 1.25rem;
    border-radius: 8px;
    transition: background 0.3s ease;
    max-width: 300px;
  }

  .emergency-contact:hover {
    background: #2980b9;
    color: white;
  }

  .emergency-contact i {
    font-size: 1.2rem;
  }

  .emergency-contact span {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .emergency-contact strong {
    font-size: 1.1rem;
    font-weight: 700;
  }

  .emergency-contact small {
    font-size: 0.85rem;
    opacity: 0.9;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6c757d;
    font-size: 0.9rem;
  }

  .contact-item i {
    color: var(--color-accent);
    width: 16px;
    text-align: center;
  }

  .contact-item a {
    color: #6c757d;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .contact-item a:hover {
    color: var(--color-accent);
  }

  /* ===== NAV SECTION ===== */
  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav-links a {
    color: #6c757d;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
    padding: 0.25rem 0;
  }

  .nav-links a:hover {
    color: var(--color-accent);
  }

  /* ===== FOOTER BOTTOM ===== */
  .footer-bottom {
    padding: 1rem 0;
    border-top: 1px solid #dee2e6;
    background: #ffffff;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: #6c757d;
    margin: 0;
    font-size: 0.85rem;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    color: #6c757d;
    text-decoration: none;
    font-size: 0.85rem;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem 0 1rem 0;
      text-align: center;
    }

    .emergency-contact {
      max-width: 100%;
      justify-content: center;
    }

    .contact-details {
      align-items: center;
    }

    .nav-links {
      align-items: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }

    .footer-links {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      padding: 1.5rem 0 1rem 0;
      gap: 1.5rem;
    }

    .emergency-contact {
      padding: 0.875rem 1rem;
    }

    .emergency-contact strong {
      font-size: 1rem;
    }

    .emergency-contact small {
      font-size: 0.8rem;
    }

    .contact-item {
      font-size: 0.85rem;
    }

    .footer-bottom {
      padding: 0.75rem 0;
    }
  }
</style>
