<style>
  /* ===== FOOTER MODERNO AZUL UNIFICADO - ORIGINAL ===== */
  .footer {
    background: linear-gradient(135deg, #1E293B 0%, #0F172A 100%);
    color: #ffffff;
    margin-top: auto;
    position: relative;
    overflow: hidden;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.02" fill-rule="nonzero"><circle cx="30" cy="30" r="4"/></g></g></svg>');
    background-size: 60px 60px;
    z-index: 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    position: relative;
    z-index: 2;
  }

  /* ===== MAIN FOOTER CONTENT ===== */
  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr 1.5fr;
    gap: 3rem;
    padding: 4rem 0 3rem;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  /* ===== LOGO SECTION MEJORADA ===== */
  .logo-section {
    align-items: flex-start;
  }

  .footer-logo-link {
    display: inline-block;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-logo-link:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .footer-logo {
    height: 80px;
    width: auto;
    filter: brightness(0) invert(1);
  }

  .company-description {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .service-badges {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .badge {
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 600;
    text-align: center;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .emergency-badge {
    background: rgba(220, 53, 69, 0.2);
    color: #ff6b6b;
    border-color: rgba(220, 53, 69, 0.3);
  }

  .licensed-badge {
    background: rgba(53, 195, 233, 0.2);
    color: #35c3e9;
    border-color: rgba(53, 195, 233, 0.3);
  }

  /* ===== SECTION TITLES ===== */
  .footer-section h4 {
    color: #ffffff;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    position: relative;
    padding-bottom: 0.75rem;
  }

  .footer-section h4::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: #35c3e9;
    border-radius: 1px;
  }

  /* ===== FOOTER LINKS ===== */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
    display: block;
    position: relative;
    font-size: 0.95rem;
  }

  .footer-links a::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 2px;
    background: #35c3e9;
    transition: width 0.3s ease;
  }

  .footer-links a:hover {
    color: #35c3e9;
    padding-left: 1rem;
    text-decoration: none;
  }

  .footer-links a:hover::before {
    width: 20px;
  }

  /* ===== CONTACT SECTION MEJORADA ===== */
  .contact-section {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
  }

  .contact-emergency {
    background: rgba(53, 195, 233, 0.15);
    padding: 1.5rem;
    border-radius: 12px;
    margin-bottom: 2rem;
    border: 1px solid rgba(53, 195, 233, 0.3);
    text-align: center;
  }

  .contact-emergency-title {
    margin: 0 0 0.5rem 0;
    font-size: 0.9rem;
    color: #35c3e9;
    font-weight: 600;
  }

  .contact-emergency-phone {
    font-size: 1.5rem;
    font-weight: 800;
    color: #35c3e9;
    text-decoration: none;
    display: block;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
  }

  .contact-emergency-phone:hover {
    color: #2a9fd1;
    transform: scale(1.05);
  }

  .contact-availability {
    font-size: 0.85rem;
    color: rgba(53, 195, 233, 0.8);
    font-style: italic;
  }

  .contact-regular {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .contact-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    min-width: 80px;
  }

  .contact-item a {
    color: #35c3e9;
    text-decoration: none;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .contact-item a:hover {
    color: #2a9fd1;
    text-decoration: underline;
  }

  .contact-value {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
  }

  /* ===== FOOTER BOTTOM MEJORADO ===== */
  .footer-bottom {
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    font-size: 0.9rem;
  }

  .footer-bottom-links {
    display: flex;
    gap: 2rem;
  }

  .footer-bottom-links a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .footer-bottom-links a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: #35c3e9;
    transition: width 0.3s ease;
  }

  .footer-bottom-links a:hover {
    color: #35c3e9;
    text-decoration: none;
  }

  .footer-bottom-links a:hover::after {
    width: 100%;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .logo-section {
      grid-column: span 2;
      text-align: center;
      margin-bottom: 1rem;
    }
    
    .contact-section {
      grid-column: span 2;
      margin-top: 1rem;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2.5rem 0 2rem;
      text-align: center;
    }
    
    .logo-section {
      order: -1;
      margin-bottom: 2rem;
    }
    
    .footer-logo {
      height: 70px;
    }
    
    .service-badges {
      flex-direction: row;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
    }
    
    .contact-section {
      order: 1;
      margin-top: 1rem;
      padding: 1.5rem;
    }
    
    .contact-emergency {
      margin-bottom: 1.5rem;
      padding: 1.25rem;
    }
    
    .contact-emergency-phone {
      font-size: 1.25rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .contact-regular {
      gap: 1rem;
    }

    .contact-item {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      text-align: center;
    }
    
    .contact-label {
      min-width: auto;
    }

    .footer-bottom-links {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1.5rem;
      justify-content: center;
    }
    
    .footer-links {
      text-align: center;
    }
    
    .footer-section h4 {
      text-align: center;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 480px) {
    .footer {
      overflow-x: hidden;
    }
    
    .footer-content {
      padding: 2rem 0 1.5rem;
      gap: 1.5rem;
    }
    
    .service-badges {
      flex-direction: column;
      gap: 0.75rem;
      align-items: center;
    }

    .badge {
      font-size: 0.8rem;
      padding: 0.5rem 1rem;
      max-width: 200px;
    }

    .footer-logo {
      height: 60px;
    }
    
    .footer-logo-link {
      padding: 0.75rem;
    }
    
    .company-description {
      font-size: 0.9rem;
      line-height: 1.5;
      margin-bottom: 1rem;
    }
    
    .contact-section {
      padding: 1rem;
    }

    .contact-emergency {
      padding: 1rem;
      margin-bottom: 1rem;
    }

    .contact-emergency-phone {
      font-size: 1.1rem;
      word-break: break-all;
    }
    
    .contact-item {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
    
    .contact-item a {
      word-break: break-all;
      font-size: 0.9rem;
    }
    
    .footer-section h4 {
      font-size: 1rem;
      margin-bottom: 1rem;
    }
    
    .footer-links a {
      font-size: 0.9rem;
      padding: 0.5rem;
    }
    
    .footer-bottom {
      padding: 1.5rem 0;
    }
    
    .footer-bottom-links {
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .footer-bottom-links a {
      font-size: 0.85rem;
    }
    
    .copyright {
      font-size: 0.85rem;
    }
  }

  /* ===== ANIMACIONES SUTILES ===== */
  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.8; }
    100% { opacity: 1; }
  }

  .emergency-badge {
    animation: pulse 3s infinite;
  }

  /* ===== ACCESIBILIDAD ===== */
  @media (prefers-reduced-motion: reduce) {
    .emergency-badge {
      animation: none;
    }
    
    .footer-logo-link:hover {
      transform: none;
    }
  }
</style> 2px;
  }
</style>