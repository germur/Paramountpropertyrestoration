<style>
  .footer {
    background: #1E293B;
    color: #ffffff;
    padding: 0;
    margin-top: auto;
  }

  /* MAIN FOOTER CONTENT */
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr 1.5fr;
    gap: 2rem;
    padding: 3rem 0;
  }

  .footer-section {
    display: flex;
    flex-direction: column;
  }

  /* LOGO SECTION */
  .logo-section {
    align-items: flex-start;
  }

  .LogoFooter {
    height: 180px;
    width: auto;
    margin-bottom: 1rem;
  }

  .company-description {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  .service-badges {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .badge {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: bold;
    text-align: center;
  }

  .emergency-badge {
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
    border: 1px solid #dc3545;
  }

  .licensed-badge {
    background: rgba(0, 123, 255, 0.1);
    color: #007bff;
    border: 1px solid #007bff;
  }

  /* SECTION TITLES */
  .footer-section h4 {
    color: #ffffff;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    border-bottom: 2px solid transparent;
    padding-bottom: 0.5rem;
  }

  .footer-section:nth-child(2) h4 {
    border-bottom-color: #35c3e9;
  }

  .footer-section:nth-child(3) h4 {
    border-bottom-color: #35c3e9;
  }

  /* FOOTER LINKS */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.25rem 0;
    display: block;
    border-left: 3px solid transparent;
    padding-left: 0.75rem;
  }

  .footer-links a:hover {
    color: #35c3e9;
    transform: translateX(4px);
    border-left-color: #35c3e9;
  }

  .emergency-links a:hover {
    border-left-color: #35c3e9;
  }

  .remodeling-links a:hover {
    border-left-color: #35c3e9;
  }

  /* CONTACT SECTION */
  .contact-section {
    background: rgba(255, 255, 255, 0.1);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .contact-emergency {
    background: rgba(53, 195, 233, 0.2);
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1.5rem;
    border: 1px solid rgba(53, 195, 233, 0.4);
  }

  .contact-emergency-title {
    margin: 0 0 0.5rem 0;
    font-size: 0.9rem;
    color: #35c3e9;
    font-weight: 600;
  }

  .contact-emergency-phone {
    font-size: 1.25rem;
    font-weight: bold;
    color: #35c3e9;
    text-decoration: none;
    display: block;
    margin-bottom: 0.25rem;
  }

  .contact-emergency-phone:hover {
    color: #2a9fd1;
  }

  .contact-availability {
    font-size: 0.8rem;
    color: #35c3e9;
    font-style: italic;
  }

  .contact-info p {
    margin-bottom: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .contact-info strong {
    color: #ffffff;
    font-size: 0.9rem;
  }

  .contact-info a {
    color: #35c3e9;
    text-decoration: none;
    font-size: 0.9rem;
  }

  .contact-info a:hover {
    color: #2a9fd1;
    text-decoration: underline;
  }

  /* SERVICE AREAS */
  .footer-service-areas {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-service-areas h4 {
    text-align: center;
    margin-bottom: 1.5rem;
    color: #ffffff;
    font-size: 1.2rem;
  }

  .service-areas-simple {
    text-align: center;
  }

  .service-areas-simple p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
    line-height: 1.4;
    margin: 0;
  }

  /* FOOTER BOTTOM */
  .footer-bottom {
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-bottom-links a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-bottom-links a:hover {
    color: #35c3e9;
  }

  /* RESPONSIVE */
  @media (max-width: 1024px) {
    .footer-content {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }

    .contact-section {
      grid-column: span 3;
    }
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 2rem 0;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .contact-info p {
      flex-direction: row;
      gap: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .service-badges {
      flex-direction: row;
    }

    .badge {
      font-size: 0.7rem;
      padding: 0.2rem 0.5rem;
    }
  }

  @keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.7; }
    100% { opacity: 1; }
  }
</style>