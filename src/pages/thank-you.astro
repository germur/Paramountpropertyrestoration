---
import BaseLayout from "../layouts/BaseLayout.astro";
import AnimatedBackground from "../components/AnimatedBackground.jsx";

const pageTitle = "Thank You! | Paramount Property Restoration";
const pageDescription = "Thank you for contacting us. We'll be in touch soon.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <section class="thank-you-section">
        <AnimatedBackground client:load />
        
        <div class="thank-you-content">
            <div class="success-icon">
                <i data-lucide="check-circle"></i>
            </div>
            
            <h1>Message Received!</h1>
            
            <p>
                Thank you for trusting us. Our team will review your request and contact you within one hour. For immediate emergencies, call us now.
            </p>
            
            <div class="cta-container">
                <a href="tel:+17866022217" class="cta-phone">
                    <i data-lucide="phone-call"></i>
                    Need Help Now? Call Us
                </a>
                
                <a href="/" class="cta-home">
                    <i data-lucide="home"></i>
                    Return to Home
                </a>
            </div>
            
            <div class="info-box">
                <p>
                    <i data-lucide="clock"></i>
                    Response in less than 1 hour â€¢ Available 24/7
                </p>
            </div>
        </div>
    </section>
    
    <script is:inline src="https://unpkg.com/lucide@latest"></script>
    <script is:inline>
        lucide.createIcons();
    </script>
</BaseLayout>

<style>
    .thank-you-section {
        position: relative;
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
        overflow: hidden;
    }
    
    .thank-you-content {
        position: relative;
        z-index: 10;
        text-align: center;
        max-width: 700px;
        width: 100%;
    }
    
    .success-icon {
        width: 100px;
        height: 100px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 2rem;
        box-shadow: 0 20px 60px rgba(53, 195, 233, 0.3);
        animation: scaleIn 0.5s ease-out;
    }
    
    @keyframes scaleIn {
        from {
            transform: scale(0);
            opacity: 0;
        }
        to {
            transform: scale(1);
            opacity: 1;
        }
    }
    
    .success-icon svg {
        width: 60px;
        height: 60px;
        color: var(--color-accent);
        stroke-width: 3;
    }
    
    .thank-you-content h1 {
        font-size: 3rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1.5rem;
        line-height: 1.2;
        animation: fadeInUp 0.6s ease-out 0.1s both;
    }
    
    .thank-you-content p {
        font-size: 1.25rem;
        color: rgba(255, 255, 255, 0.95);
        margin-bottom: 3rem;
        line-height: 1.7;
        animation: fadeInUp 0.6s ease-out 0.2s both;
    }
    
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .cta-container {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
        margin-bottom: 2rem;
        animation: fadeInUp 0.6s ease-out 0.3s both;
    }
    
    .cta-phone {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 1.5rem 3rem;
        background: var(--color-accent);
        color: white;
        text-decoration: none;
        border-radius: 50px;
        font-size: 1.4rem;
        font-weight: 800;
        box-shadow: 0 15px 40px rgba(53, 195, 233, 0.5);
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .cta-phone:hover {
        background: #2a9fd1;
        transform: translateY(-3px);
        box-shadow: 0 20px 50px rgba(53, 195, 233, 0.6);
    }
    
    .cta-phone svg {
        width: 28px;
        height: 28px;
        animation: ringPhone 2s ease-in-out infinite;
    }
    
    @keyframes ringPhone {
        0%, 100% { transform: rotate(0deg); }
        10%, 30% { transform: rotate(-10deg); }
        20%, 40% { transform: rotate(10deg); }
        50% { transform: rotate(0deg); }
    }
    
    .cta-home {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        background: white;
        color: #1E293B;
        text-decoration: none;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 700;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }
    
    .cta-home:hover {
        background: #f1f5f9;
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
    }
    
    .cta-home svg {
        width: 22px;
        height: 22px;
    }
    
    .info-box {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 1.5rem;
        animation: fadeInUp 0.6s ease-out 0.4s both;
    }
    
    .info-box p {
        color: white;
        font-size: 1rem;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }
    
    .info-box svg {
        width: 20px;
        height: 20px;
        flex-shrink: 0;
    }
    
    @media (max-width: 768px) {
        .thank-you-content h1 {
            font-size: 2.5rem;
        }
        
        .thank-you-content p {
            font-size: 1.1rem;
        }
        
        .cta-phone {
            font-size: 1.2rem;
            padding: 1.25rem 2rem;
        }
        
        .cta-home {
            font-size: 1rem;
            padding: 1rem 2rem;
        }
        
        .success-icon {
            width: 80px;
            height: 80px;
        }
        
        .success-icon svg {
            width: 50px;
            height: 50px;
        }
    }
    
    @media (max-width: 480px) {
        .thank-you-section {
            padding: 3rem 1.5rem;
        }
        
        .thank-you-content h1 {
            font-size: 2rem;
        }
        
        .thank-you-content p {
            font-size: 1rem;
            margin-bottom: 2rem;
        }
        
        .cta-phone {
            font-size: 1rem;
            padding: 1rem 1.5rem;
            gap: 0.75rem;
        }
        
        .cta-phone svg {
            width: 24px;
            height: 24px;
        }
    }
</style>
