---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/global.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../components/AcordeonServices";
import SEOHead from "../../components/SEOHead.jsx";

// SEO base para hub de Services (sin ciudad)
const pageTitle = "Bathroom Remodeling Contractors | Paramount Property Restoration";
const pageDescription = "Stylish, functional bathrooms with ADA conversions and premium materials. Transparent pricing & warranty.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  data-page="bathroom"
>
  {/* SEO centralizado con SEOHead (hub sin ciudad) */}
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="services"
    service="bathroom-remodeling"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone={"+1-786-602-2217"}
    slot="head"
  />

  <!-- Hero Section -->
  <section class="hero-section" style="background-image: url('/images/bathroomHero.jpg');">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Transform Your Bathroom Into Your Personal Oasis</h1>
      <p>
        Professional remodeling services with modern designs, premium materials,
        and expert craftsmanship to create the bathroom of your dreams.
      </p>
      <a href="/contact" class="btn">Get Estimate â†’</a>
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="section">
    <div class="container">
      <div class="services-grid">
        <div class="service-item">
          <i class="fas fa-bath"></i>
          <h3>Bathtub Replacement</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-shower"></i>
          <h3>Walk-in Showers</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-sink"></i>
          <h3>Vanity & Storage</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-tint"></i>
          <h3>Waterproofing</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-fan"></i>
          <h3>Ventilation Upgrade</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-hammer"></i>
          <h3>Full Remodel</h3>
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions Cards Section -->
  <section class="solutions-section">
    <div class="container">
      <h2 class="solutions-title">Bathroom Remodeling Solutions</h2>
      <div class="solutions-grid">
        <!-- Card 1 -->
        <div class="solution-card">
          <div class="card-image">
            <img
              src="/images/bathtub-replacement.jpg"
              alt="Bathtub Replacement"
            />
          </div>
          <div class="card-content">
            <h3>Bathtub Replacement</h3>
            <p>
              Upgrade your bath with durable, reinforced acrylic tubs. Our
              efficient process often allows for installation in just one day,
              minimizing disruption without demolition.
            </p>
            <a href="/contact" class="btn">View Details</a>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/vanity-storage.jpg" alt="Vanity & Storage" />
          </div>
          <div class="card-content">
            <h3>Vanity & Storage</h3>
            <p>
              Transform your space with sleek, modern walk-in showers featuring
              tempered glass. Enjoy enhanced safety with non-slip flooring and
              superior moisture-resistant designs.
            </p>
            <a href="/contact" class="btn">View Details</a>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/moisture-repair.jpg" alt="Moisture Repair" />
          </div>
          <div class="card-content">
            <h3>Moisture Repair</h3>
            <p>
              Maximize functionality and style with our custom vanity and storage
              options. Choose from elegant double sinks or integrated built-in
              shelves crafted from treated wood.
            </p>
            <a href="/contact" class="btn">View Details</a>
          </div>
        </div>

        <!-- Card 4 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/waterproofing.jpg" alt="Waterproofing" />
          </div>
          <div class="card-content">
            <h3>Waterproofing</h3>
            <p>
              Ensure lasting protection with advanced waterproofing systems,
              including Schluter membrane technology. Our ventilation solutions
              are code compliant, providing optimal air quality and preventing
              moisture issues
            </p>
            <a href="/contact" class="btn">View Details</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Steps Section -->
  <section class="steps-section">
    <div class="container">
      <h2 class="steps-title">How It Works</h2>
      <div class="steps-container">
        <!-- Step 1 -->
        <div class="step-item" data-step="1">
          <div class="step-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h3>Consultation</h3>
          <p>Free 3D Design Session (Virtual or On Site)</p>
        </div>

        <!-- Step 2 -->
        <div class="step-item" data-step="2">
          <div class="step-icon">
            <i class="fas fa-cube"></i>
          </div>
          <h3>Material Selection</h3>
          <p>Choose from 50+ Tile Designs & Fixtures</p>
        </div>

        <!-- Step 3 -->
        <div class="step-item" data-step="3">
          <div class="step-icon">
            <i class="fas fa-tools"></i>
          </div>
          <h3>Installation</h3>
          <p>Demolition, Process | Avg. Time: 2.5 Days</p>
        </div>

        <!-- Step 4 -->
        <div class="step-item" data-step="4">
          <div class="step-icon">
            <i class="fas fa-check"></i>
          </div>
          <h3>Final Walkthrough</h3>
          <p>Quality Check & Client Approval</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section class="recent-remodels-section">
    <div class="container">
      <h2 class="recent-remodels-title">Recent Bathroom Remodels</h2>
      <div class="remodels-gallery">
        <!-- Remodel 1 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioOne.jpg" alt="Master Bathroom" />
          </div>
          <h3>Master Bathroom</h3>
          <p>Miami</p>
        </div>

        <!-- Remodel 2 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioTwo.jpg" alt="ADA Bathroom" />
          </div>
          <h3>ADA Bathroom</h3>
          <p>Orlando</p>
        </div>

        <!-- Remodel 3 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioThree.jpg" alt="Small Bathroom" />
          </div>
          <h3>Small Bathroom</h3>
          <p>Tampa</p>
        </div>
      </div>

      <!-- Portfolio Tags -->
      <div class="cnt-tagsPorfolio">
        <span class="tag-itemPorfolio">Bathroom Renovation</span>
        <span class="tag-itemPorfolio">Shower Installation</span>
        <span class="tag-itemPorfolio">Tile Replacement</span>
        <span class="tag-itemPorfolio">Vanity Upgrade</span>
        <span class="tag-itemPorfolio">Bathroom Waterproofing</span>
        <span class="tag-itemPorfolio">Modern Bathroom Design</span>
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  <section class="sectionBlogBathroom">
    <div class="container">
      <div>
        <h2 class="tittleSection-cardBlogBathroo">
          Bathroom Remodeling Guides
        </h2>
      </div>
      <div>
        <div class="cntFather-cardBlogBathroo">
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Bathroom Design Trends 2024</h3>
            <p class="text-cardBlogBathroom">
              Discover the latest trends in bathroom design, from minimalist aesthetics to luxurious spa-like features that transform your space.
            </p>
            <a class="link-blogBathroom"
              >Read More <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Small Bathroom Optimization</h3>
            <p class="text-cardBlogBathroom">
              Learn how to maximize space in small bathrooms with smart storage solutions, layout planning, and multi-functional fixtures.
            </p>
            <a class="link-blogBathroom"
              >Read More <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <FAQ client:load category="bathroom" title="FAQs" />
    </div>
  </section>
</BaseLayout>