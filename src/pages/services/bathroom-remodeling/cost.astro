---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import RemodelingCalculator from "../../../components/tools/RemodelingCalculator";
import RestorationCTA from "../../../components/RestorationCTA";
import FAQ from "../../../components/AcordeonServices";
import "../../../styles/pages/cost-guide.css";
import "../../../styles/pages/services-template.css";

const costFaqs = [
    {
        id: "bath-cost-1",
        question: "What is the average cost of a bathroom remodel in Florida?",
        answer: "A standard bathroom remodel in Florida typically costs between $10,000 and $25,000. Master bathroom suites with luxury features like soaking tubs and walk-in showers often range from $30,000 to $60,000+.",
    },
    {
        id: "bath-cost-2",
        question: "How much does it cost to convert a tub to a walk-in shower?",
        answer: "A professional tub-to-shower conversion typically costs between $5,000 and $10,000, depending on the materials (acrylic vs. custom tile), plumbing modifications, and glass enclosure style.",
    },
    {
        id: "bath-cost-3",
        question: "Does a bathroom remodel require a permit in Florida?",
        answer: "Yes, almost all bathroom remodels involving plumbing, electrical, or structural changes require a permit. We handle all permitting and inspections as part of our full-service general contracting.",
    },
    {
        id: "bath-cost-4",
        question: "How long does a bathroom renovation take?",
        answer: "A small bathroom update can take 2-3 weeks. A full master bath remodel typically takes 4-6 weeks from demolition to final touches, depending on material availability and inspections.",
    },
];
---

<BaseLayout
    title="Bathroom Remodeling Cost in Florida | 2025 Price Guide & Calculator"
    description="How much does a bathroom remodel cost in Florida? Use our free calculator. Prices range from $10k to $50k+. Get a custom quote today."
>
    <!-- Hero Section -->
    <section class="cost-hero">
        <div class="cost-hero-bg">
            <img
                src="/images/bathroom-remodel-hero.webp"
                alt="Bathroom remodeling cost guide florida"
            />
            <div class="cost-hero-overlay"></div>
        </div>
        <div class="cost-hero-content">
            <div class="trust-badges">
                <span class="trust-badge">
                    <i class="fas fa-calendar-check" style="color: #4ade80;"
                    ></i> 2025 Price Guide
                </span>
                <span class="trust-badge">
                    <i class="fas fa-map-marker-alt" style="color: #f87171;"
                    ></i> Florida Average
                </span>
            </div>
            <h1>
                Bathroom Remodeling <br />
                <span class="highlight">Cost Guide & Calculator</span>
            </h1>
            <p>
                From simple powder room updates to luxury master spa retreats.
                Get accurate cost estimates for your Florida bathroom project.
            </p>
            <div class="hero-actions">
                <a href="#calculator" class="cta-button primary">
                    <i class="fas fa-calculator"></i> Estimate My Bathroom
                </a>
            </div>
        </div>
    </section>

    <!-- Calculator Section -->
    <section id="calculator" class="cost-section bg-light">
        <div class="container">
            <div class="calculator-grid">
                <div class="calculator-wrapper">
                    <RemodelingCalculator client:load serviceType="bathroom" />
                </div>
                <div
                    class="glass-card"
                    style="padding: 2rem; border-radius: 1rem;"
                >
                    <h3
                        style="font-size: 1.5rem; font-weight: 700; color: #0f172a; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;"
                    >
                        <i class="fas fa-lightbulb" style="color: #eab308;"></i>
                        ROI & Value
                    </h3>
                    <p style="color: #4b5563; margin-bottom: 1rem;">
                        A bathroom remodel is one of the smartest investments
                        for your home. In Florida, homeowners typically recoup <strong
                            >60-70%</strong
                        > of their investment upon resale. Beyond financial returns,
                        a new bathroom significantly enhances daily comfort and home
                        appeal.
                    </p>
                    <ul
                        style="list-style: none; padding: 0; margin: 0 0 2rem 0;"
                    >
                        <li
                            style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem; color: #374151;"
                        >
                            <i
                                class="fas fa-check-circle"
                                style="color: var(--color-accent);"></i> Increased
                            Home Value
                        </li>
                        <li
                            style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem; color: #374151;"
                        >
                            <i
                                class="fas fa-check-circle"
                                style="color: var(--color-accent);"></i> Enhanced
                            Functionality & Comfort
                        </li>
                        <li
                            style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 0.75rem; color: #374151;"
                        >
                            <i
                                class="fas fa-check-circle"
                                style="color: var(--color-accent);"></i> Faster Sale
                            Time
                        </li>
                        <li
                            style="display: flex; align-items: center; gap: 0.5rem; color: #374151;"
                        >
                            <i
                                class="fas fa-check-circle"
                                style="color: var(--color-accent);"></i> Improved
                            Water Efficiency
                        </li>
                    </ul>
                    <RestorationCTA
                        title="Ready for a Precise Quote?"
                        subtitle="Online calculators are estimates. Our design team provides exact pricing."
                        buttonText="Get Free Quote"
                        buttonLink="/contact"
                        compact={true}
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Cost Tiers -->
    <section class="cost-section">
        <div class="container">
            <div class="section-header">
                <span class="section-label">Compare Packages</span>
                <h2 class="section-title">Bathroom Remodel Tiers</h2>
            </div>

            <div class="pricing-grid">
                <!-- Economy -->
                <div class="pricing-tier">
                    <div class="tier-stripe gray"></div>
                    <div class="tier-icon gray">
                        <i class="fas fa-paint-roller"></i>
                    </div>
                    <h3 class="tier-title">Economy Refresh</h3>
                    <p class="tier-price">$8k - $15k</p>
                    <p class="tier-description">
                        Best for cosmetic updates and keeping existing layout.
                    </p>
                    <ul class="tier-features">
                        <li>
                            <i class="fas fa-check"></i> New vanity & fixtures
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Vinyl or basic tile flooring
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Tub/shower refinishing
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Fresh paint & lighting
                        </li>
                    </ul>
                </div>

                <!-- Mid-Range -->
                <div class="pricing-tier featured">
                    <div class="tier-badge">MOST POPULAR</div>
                    <div class="tier-icon blue">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <h3 class="tier-title">Mid-Range Custom</h3>
                    <p class="tier-price">$15k - $30k</p>
                    <p class="tier-description">
                        Full remodel with quality materials and layout
                        improvements.
                    </p>
                    <ul class="tier-features">
                        <li>
                            <i class="fas fa-check"></i> New tub or shower conversion
                        </li>
                        <li>
                            <i class="fas fa-check"></i> New tile flooring & walls
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Double vanity (if space
                            allows)
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Upgraded fixtures & ventilation
                        </li>
                    </ul>
                </div>

                <!-- Luxury -->
                <div class="pricing-tier">
                    <div class="tier-stripe yellow"></div>
                    <div class="tier-icon yellow">
                        <i class="fas fa-gem"></i>
                    </div>
                    <h3 class="tier-title">Luxury Spa</h3>
                    <p class="tier-price">$35k - $60k+</p>
                    <p class="tier-description">
                        Ultimate relaxation with premium materials and features.
                    </p>
                    <ul class="tier-features">
                        <li>
                            <i class="fas fa-check"></i> Custom walk-in steam shower
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Freestanding soaking tub
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Heated floors & towel warmers
                        </li>
                        <li>
                            <i class="fas fa-check"></i> Custom cabinetry & premium
                            stone
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- ROI Section -->
    <section class="cost-section bg-dark">
        <div class="container">
            <h2 class="section-title">Invest in Your Comfort & Value</h2>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">65%</div>
                    <p class="stat-label">Average ROI in Florida</p>
                </div>
                <div class="stat-card">
                    <div class="stat-number">Spa</div>
                    <p class="stat-label">Features Most Requested</p>
                </div>
                <div class="stat-card">
                    <div class="stat-number">Safety</div>
                    <p class="stat-label">Aging-in-Place Upgrades</p>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="cost-section">
        <div class="container" style="max-width: 48rem;">
            <h2 class="section-title">Bathroom Cost FAQs</h2>
            <FAQ
                client:visible
                category="bathroom-cost"
                customQuestions={costFaqs}
                title=""
            />
        </div>
    </section>

    <!-- CTA -->
    <RestorationCTA
        client:visible
        title="Ready to Transform Your Bathroom?"
        subtitle="Get a detailed quote tailored to your space, style, and budget."
        buttonText="Get Free Consultation"
        buttonLink="/contact"
    />
</BaseLayout>
