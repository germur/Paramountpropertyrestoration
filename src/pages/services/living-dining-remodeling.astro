---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/global.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../components/AcordeonServices";
import SEOHead from "../../components/SEOHead.jsx";

const pageTitle = "Living & Dining Room Remodeling | Paramount Property Restoration";
const pageDescription = "Upgrade your living spaces with stylish finishes, better lighting, and open-concept layouts.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  data-page="living-dining"
>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="services"
    service="living-dining-remodeling"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone={"+1-786-602-2217"}
    slot="head"
  />
  <!-- Hero Section -->
  <section class="hero-section" style="background-image: url('/images/livingDiningHero.jpg');">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Living & Dining Room Remodels: Your Perfect Gathering Space</h1>
      <p>
        Create inviting, functional spaces for entertaining and relaxation.
        Custom designs for every style, serving Central Florida and coastal
        areas.
      </p>
      <a href="/contact" class="btn"
        >Get Your Free Living & Dining Estimate â†’</a
      >
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="section">
    <div class="container">
      <div class="services-grid">
        <div class="service-item">
          <i class="fas fa-couch"></i>
          <h3>Living Room Remodel</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-utensils"></i>
          <h3>Dining Area Design</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-lightbulb"></i>
          <h3>Lighting Solutions</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-layer-group"></i>
          <h3>Flooring Installation</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-paint-roller"></i>
          <h3>Wall Finishes</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-expand"></i>
          <h3>Open Concept Conversion</h3>
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions Cards Section -->
  <section class="solutions-section">
    <div class="container">
      <h2 class="solutions-title">
        Tailored Living & Dining Remodeling Solutions
      </h2>
      <div class="solutions-grid">
        <!-- Card 1 -->
        <div class="solution-card">
          <div class="card-image">
            <img
              src="/images/livingDiningSolutionsOne.jpg"
              alt="Open Concept Transformations"
            />
          </div>
          <div class="card-content">
            <h3>Open Concept Transformations</h3>
            <p>
              Remove walls to create spacious, flowing layouts. Enhance natural
              light and promote seamless connectivity between living, dining, and
              kitchen areas.
            </p>
            <a href="/contact" class="btn">View Open Concept Projects</a>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/livingDiningSolutionsTwo.jpg" alt="Custom Built-Ins & Storage" />
          </div>
          <div class="card-content">
            <h3>Custom Built-Ins & Storage</h3>
            <p>Design and install custom shelving, media centers, and display units. Maximize space and add architectural interest while keeping your area clutter-free.</p>
            <a href="/contact" class="btn">Explore Storage Ideas</a>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/livingDiningSolutionsThree.jpg" alt="Flooring & Lighting Upgrades" />
          </div>
          <div class="card-content">
            <h3>Flooring & Lighting Upgrades</h3>
            <p>Elevate ambiance with new flooring (hardwood, tile, laminate) and strategic lighting solutions (recessed, pendant, accent lighting) to brighten and define zones.</p>
            <a href="/contact" class="btn">See Design Possibilities</a>
          </div>
        </div>

        <!-- Card 4 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/livingDiningSolutionsFour.jpg" alt="Architectural Enhancements" />
          </div>
          <div class="card-content">
            <h3>Architectural Enhancements</h3>
            <p>Add character with new archways, decorative moldings, or custom fireplaces. We seamlessly integrate these features for a sophisticated finish. Ask us about smart lighting and climate control!</p>
            <a href="/contact" class="btn">View Details</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Steps Section -->
  <section class="steps-section">
    <div class="container">
      <h2 class="steps-title">How It Works</h2>
      <div class="steps-container">
        <!-- Step 1 -->
        <div class="step-item" data-step="1">
          <div class="step-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h3>Consultation</h3>
          <p>Free 3D Design Session (Virtual or On Site)</p>
        </div>

        <!-- Step 2 -->
        <div class="step-item" data-step="2">
          <div class="step-icon">
            <i class="fas fa-cube"></i>
          </div>
          <h3>Material Selection</h3>
          <p>Choose from 50+ Design Options & Finishes</p>
        </div>

        <!-- Step 3 -->
        <div class="step-item" data-step="3">
          <div class="step-icon">
            <i class="fas fa-tools"></i>
          </div>
          <h3>Installation</h3>
          <p>Professional Process | Avg. Time: 1-2 Weeks</p>
        </div>

        <!-- Step 4 -->
        <div class="step-item" data-step="4">
          <div class="step-icon">
            <i class="fas fa-check"></i>
          </div>
          <h3>Final Walkthrough</h3>
          <p>Quality Check & Client Approval</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section class="recent-remodels-section">
    <div class="container">
      <h2 class="recent-remodels-title">Recent Living & Dining Projects</h2>
      <div class="remodels-gallery">
        <!-- Remodel 1 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioOne.jpg" alt="Open Concept Living" />
          </div>
          <h3>Open Concept Living</h3>
          <p>Miami</p>
        </div>

        <!-- Remodel 2 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioTwo.jpg" alt="Modern Dining Room" />
          </div>
          <h3>Modern Dining Room</h3>
          <p>Orlando</p>
        </div>

        <!-- Remodel 3 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioThree.jpg" alt="Family Living Space" />
          </div>
          <h3>Family Living Space</h3>
          <p>Tampa</p>
        </div>
      </div>

      <!-- Portfolio Tags -->
      <div class="cnt-tagsPorfolio">
        <span class="tag-itemPorfolio">Living Rooms</span>
        <span class="tag-itemPorfolio">Dining Rooms</span>
        <span class="tag-itemPorfolio">Luxury Upgrades</span>
        <span class="tag-itemPorfolio">Smart Lighting</span>
        <span class="tag-itemPorfolio">Open Concept</span>
        <span class="tag-itemPorfolio">Modern Design</span>
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  <section class="sectionBlogBathroom">
    <div class="container">
      <div>
        <h2 class="tittleSection-cardBlogBathroo">
          Living & Dining Remodeling Guides
        </h2>
      </div>
      <div>
        <div class="cntFather-cardBlogBathroo">
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Open Concept Design Tips</h3>
            <p class="text-cardBlogBathroom">
              Learn how to create flowing, connected spaces that enhance natural light and improve functionality for modern living.
            </p>
            <a class="link-blogBathroom"
              >Read More <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Lighting for Living Spaces</h3>
            <p class="text-cardBlogBathroom">
              Discover how to layer lighting effectively to create ambiance, improve functionality, and highlight your space's best features.
            </p>
            <a class="link-blogBathroom"
              >Read More <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <FAQ
        client:load
        category="living-dining"
        title="FAQs"
      />
    </div>
  </section>
</BaseLayout>