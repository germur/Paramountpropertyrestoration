---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/global.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../components/AcordeonServices";
import SEOHead from "../../components/SEOHead.jsx";

const pageTitle = "Kitchen Remodeling Experts | Paramount Property Restoration";
const pageDescription = "From open layouts to premium countertops – transform your kitchen today with Paramount's expert team.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  data-page="kitchen"
>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="services"
    service="kitchen-remodeling"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone={"+1-786-602-2217"}
    slot="head"
  />
  <!-- Hero Section -->
  <section class="hero-section" style="background-image: url('/images/kitchenHero.jpg');">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Your Dream Kitchen, Expertly Remodeled in Florida</h1>
      <p>
        Transform your space with custom designs, smart solutions, and premium
        finishes. Serving Orlando, Miami, Tampa & beyond.
      </p>
      <a href="/contact" class="btn"
        >Get Your Free Kitchen Remodel Estimate →</a
      >
    </div>
  </section>

  <!-- Services Grid Section -->
  <section class="section">
    <div class="container">
      <div class="grid-balanced">
        <div class="service-item">
          <i class="fas fa-utensils"></i>
          <h3>Countertop Installation</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-fire"></i>
          <h3>Stove & Oven Setup</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-sink"></i>
          <h3>Sink & Faucet Upgrade</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-box-open"></i>
          <h3>Custom Cabinetry</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-bolt"></i>
          <h3>Electrical & Lighting</h3>
        </div>

        <div class="service-item">
          <i class="fas fa-hammer"></i>
          <h3>Full Kitchen Remodel</h3>
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions Cards Section -->
  <section class="solutions-section">
    <div class="container">
      <h2 class="solutions-title">Tailored Kitchen Remodeling Solutions</h2>
      <div class="grid-fixed-4">
        <!-- Card 1 -->
        <div class="solution-card">
          <div class="card-image">
            <img
              src="/images/kitchenSolutionsOne.jpg"
              alt="Custom Cabinetry & Storage"
            />
          </div>
          <div class="card-content">
            <h3>Custom Cabinetry & Storage</h3>
            <p>
              Elevate your kitchen's style and efficiency. Explore hardwood, MDF,
              plywood options in Shaker, Modern, Traditional, and more. Optimized
              for your unique space.
            </p>
            <a href="/contact" class="btn">View Cabinet Options</a>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/kitchenSolutionsTwo.jpg" alt="Premium Countertop Installation" />
          </div>
          <div class="card-content">
            <h3>Premium Countertop Installation</h3>
            <p>
              Discover durable, beautiful surfaces. Choose from Granite, Quartz,
              Marble, or Butcher Block. Perfect for high-traffic cooking and
              entertaining.
            </p>
            <a href="/contact" class="btn">Explore Countertop Styles</a>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/kitchenSolutionsThree.jpg" alt="Kitchen Island & Layout Design" />
          </div>
          <div class="card-content">
            <h3>Kitchen Island & Layout Design</h3>
            <p>
              Optimize your kitchen's flow. Integrate seating, maximize storage,
              and seamlessly blend appliances for a truly functional and inviting
              space.
            </p>
            <a href="/contact" class="btn">See Design Possibilities</a>
          </div>
        </div>

        <!-- Card 4 -->
        <div class="solution-card">
          <div class="card-image">
            <img src="/images/kitchenSolutionsFour.jpg" alt="Appliance & Plumbing Integration" />
          </div>
          <div class="card-content">
            <h3>Appliance & Plumbing Integration</h3>
            <p>
              Modernize your kitchen with efficient plumbing and smart appliance
              installations. We ensure seamless functionality and code compliance
              for peace of mind. Ask us about integrating smart home technologies
              and energy-efficient solutions!
            </p>
            <a href="/contact" class="btn">Learn About Upgrades</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Steps Section -->
  <section class="steps-section">
    <div class="container">
      <h2 class="steps-title">How It Works</h2>
      <div class="grid-fixed-4">
        <!-- Step 1 -->
        <div class="step-item" data-step="1">
          <div class="step-icon">
            <i class="fas fa-phone-alt"></i>
          </div>
          <h3>Consultation</h3>
          <p>Free 3D Design Session (Virtual or On Site)</p>
        </div>

        <!-- Step 2 -->
        <div class="step-item" data-step="2">
          <div class="step-icon">
            <i class="fas fa-cube"></i>
          </div>
          <h3>Material Selection</h3>
          <p>Choose from 50+ Design Options & Finishes</p>
        </div>

        <!-- Step 3 -->
        <div class="step-item" data-step="3">
          <div class="step-icon">
            <i class="fas fa-tools"></i>
          </div>
          <h3>Installation</h3>
          <p>Professional Process | Avg. Time: 1-2 Weeks</p>
        </div>

        <!-- Step 4 -->
        <div class="step-item" data-step="4">
          <div class="step-icon">
            <i class="fas fa-check"></i>
          </div>
          <h3>Final Walkthrough</h3>
          <p>Quality Check & Client Approval</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Section -->
  <section class="recent-remodels-section">
    <div class="container">
      <h2 class="recent-remodels-title">Inspiring Kitchen Transformations</h2>
      <div class="remodels-gallery">
        <!-- Remodel 1 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioOne.jpg" alt="Gourmet Chef's Kitchen" />
          </div>
          <h3>Gourmet Chef's Kitchen</h3>
          <p>Orlando</p>
        </div>

        <!-- Remodel 2 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioTwo.jpg" alt="Sleek Modern Kitchen" />
          </div>
          <h3>Sleek Modern Kitchen</h3>
          <p>Tampa</p>
        </div>

        <!-- Remodel 3 -->
        <div class="remodel-item">
          <div class="remodel-image">
            <img src="/images/banoPortfolioThree.jpg" alt="Cozy Family Kitchen" />
          </div>
          <h3>Cozy Family Kitchen</h3>
          <p>Miami</p>
        </div>
      </div>

      <!-- Portfolio Tags -->
      <div class="cnt-tagsPorfolio">
        <span class="tag-itemPorfolio">Kitchen Islands</span>
        <span class="tag-itemPorfolio">Compact Kitchens</span>
        <span class="tag-itemPorfolio">Luxury Upgrades</span>
        <span class="tag-itemPorfolio">Sustainable Designs</span>
        <span class="tag-itemPorfolio">Smart Tech Integration</span>
        <span class="tag-itemPorfolio">Modern Kitchen Design</span>
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  <section class="sectionBlogBathroom">
    <div class="container">
      <div>
        <h2 class="tittleSection-cardBlogBathroo">
          Kitchen Remodeling Guides
        </h2>
      </div>
      <div>
        <div class="cntFather-cardBlogBathroo">
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Kitchen Layout Planning</h3>
            <p class="text-cardBlogBathroom">
              Learn about optimal kitchen layouts, work triangles, and how to maximize efficiency and flow in your kitchen design.
            </p>
            <a class="link-blogBathroom"
              >Read More <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Countertop Material Guide</h3>
            <p class="text-cardBlogBathroom">
              Compare granite, quartz, marble, and other countertop materials to find the perfect surface for your kitchen remodel.
            </p>
            <a class="link-blogBathroom"
              >Read More <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <FAQ client:load category="kitchen" title="FAQs" />
    </div>
  </section>
</BaseLayout>