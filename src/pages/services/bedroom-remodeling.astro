\---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/pages/bedroom-remodeling.css";
import "../../styles/global.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../components/AcordeonServices";
---

<BaseLayout
  title="Bedroom Renovation Services | 1GC Construction"
  description="Modern bedroom redesigns with lighting, storage, and smart layouts. Free consultation available."
>
  <!-- Section One -->
  <section class="hero-sectionBedroom">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Bedroom Remodeling in Florida: Your Personal Retreat</h1>
      <p>
        Transform your bedroom into a comfortable, stylish sanctuary. Custom
        designs for master suites, guest rooms, and kids' rooms across Central
        Florida and coastal areas
      </p>
      <a href="/contact" class="btn btn--primary"
        >Get Your Free Bedroom Remodel Estimate →</a
      >
    </div>
  </section>

  <!-- Section Two -->
  <section>
    <div class="services-grid">
      <div class="service-item">
        <i class="fas fa-bed"></i>
        <h3>Closet & Storage</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-paint-roller"></i>
        <h3>Painting & Wall Repair</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-layer-group"></i>
        <h3>Flooring Replacement</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-lightbulb"></i>
        <h3>Lighting Installation</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-door-open"></i>
        <h3>Doors & Windows</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-home"></i>
        <h3>Full Remodel</h3>
      </div>
    </div>
  </section>

  <!-- Section Three - Solutions Cards -->
  <section class="solutions-section">
    <h2 class="solutions-title">Tailored Bedroom Remodeling Solutions</h2>
    <div class="solutions-grid">
      <!-- Card 1 -->
      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/bedroomSolutionOne.jpg"
            alt="bedroomSolution"
          />
        </div>
        <div class="card-content">
          <h3>Master Suite Transformations</h3>
          <p>Create a luxurious and functional master bedroom with custom layouts, en-suite bathrooms, and dedicated sitting areas. Your ultimate personal oasis.</p>
          <a href="/contact" class="btn btn--primary">View Master Suite Projects</a>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/bedroomSolutionTwo.jpg" alt="bedroomSolution" />
        </div>
        <div class="card-content">
          <h3>Custom Closet Design</h3>
          <p>Maximize your storage with custom walk-in or reach-in closets. Designed for organization, efficiency, and seamless integration with your bedroom aesthetic.</p>
          <a href="/contact" class="btn btn--primary">Explore Closet Solutions</a>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/bedroomSolutionThree.jpg" alt="bedroomSolution" />
        </div>
        <div class="card-content">
          <h3>Lighting & Ambiance Upgrades</h3>
          <p>Elevate comfort with personalized lighting (recessed, dimmable, accent) and serene interior finishes. Create the perfect mood for relaxation and rest.</p>
          <a href="/contact" class="btn btn--primary">See Design Possibilities</a>
        </div>
      </div>

      <!-- Card 4 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/bedroomSolutionFour.jpg" alt="bedroomSolution" />
        </div>
        <div class="card-content">
          <h3>Space Optimization & Layout</h3>
          <p>Reconfigure layouts to optimize flow and functionality, especially for smaller bedrooms. Integrate custom built-ins and smart storage for a clutter-free environment. Ask us about smart room controls!</p>
          <a href="/contact" class="btn btn--primary">Learn About Space Solutions</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Steps -->

  <section class="steps-section">
    <h2 class="steps-title">How It Works</h2>
    <div class="steps-container">
      <!-- Step 1 -->
      <div class="step-item" data-step="1">
        <div class="step-icon">
          <i class="fas fa-phone-alt"></i>
        </div>
        <h3>Consultation</h3>
        <p>Free 3D Design Session (Virtual or On Site)</p>
      </div>

      <!-- Step 2 -->
      <div class="step-item" data-step="2">
        <div class="step-icon">
          <i class="fas fa-cube"></i>
        </div>
        <h3>Material Selection</h3>
        <p>Choose from 50+ Tile Designs & Fixtures</p>
      </div>

      <!-- Step 3 -->
      <div class="step-item" data-step="3">
        <div class="step-icon">
          <i class="fas fa-tools"></i>
        </div>
        <h3>Installation</h3>
        <p>Demolition, Process | Avg. Time: 2.5 Days</p>
      </div>

      <!-- Step 4 -->
      <div class="step-item" data-step="4">
        <div class="step-icon">
          <i class="fas fa-check"></i>
        </div>
        <h3>Final Walkthrough</h3>
        <p>Quality Check & Client Approval</p>
      </div>
    </div>
  </section>

  <!-- Section Portfolio -->

  <section class="recent-remodels-section">
    <h2 class="recent-remodels-title">Recent Bathroom Remodels</h2>
    <div class="remodels-gallery">
      <!-- Remodel 1 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioOne.jpg" alt="Master Bathroom" />
        </div>
        <h3>Master Bathroom</h3>
        <p>Miami</p>
      </div>

      <!-- Remodel 2 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioTwo.jpg" alt="ADA Bathroom" />
        </div>
        <h3>ADA Bathroom</h3>
        <p>Orlando</p>
      </div>

      <!-- Remodel 3 -->
      <div class="remodel-item">
        <div class="remodel-image">
          <img src="/images/banoPortfolioThree.jpg" alt="Small Bathroom" />
        </div>
        <h3>Small Bathroom</h3>
        <p>Tampa</p>
      </div>
    </div>

    <!-- Tags-Portfolio -->

    <div class="cnt-tagsPorfolio">
      <span class="tag-itemPorfolio">Master Bedrooms</span>
      <span class="tag-itemPorfolio">Guest & Kids Rooms</span>
      <span class="tag-itemPorfolio">Luxury Upgrades</span>
      <span class="tag-itemPorfolio">Smart Home Integration</span>
      <span class="tag-itemPorfolio">Eco-Friendly Designs</span>
    </div>
  </section>

  <!-- Blog Ba;os -->

  <section class="sectionBlogBathroom">
    <div>
      <div>
        <h2 class="tittleSection-cardBlogBathroo">
          Bathroom Remodeling Guides
        </h2>
      </div>
      <div>
        <div class="cntFather-cardBlogBathroo">
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Este es el Titulo de la card</h3>
            <p class="text-cardBlogBathroom">
              Esta es la description para invitar a ver los blos sobre las cosas
              de ba;o
            </p>
            <a class="link-blogBathroom"
              >Leer Más <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
          <div class="cnt-cardBlogBathroom">
            <h3 class="title-cardBlogBathroom">Este es el Titulo de la card</h3>
            <p class="text-cardBlogBathroom">
              Esta es la description para invitar a ver los blos sobre las cosas
              de ba;o
            </p>
            <a class="link-blogBathroom"
              >Leer Más <i class="flechaBlog fas fa-arrow-right"></i></a
            >
          </div>
        </div>
      </div>
    </div>
  </section>
  <section>
    <FAQ client:load category="bedroom" title="FAQs" />
  </section>
</BaseLayout>