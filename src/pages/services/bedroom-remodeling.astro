---
import BaseLayout from "../../layouts/BaseLayout.astro";
import UnifiedServiceTemplate from "../../components/services/templates/UnifiedServiceTemplate.astro";
import "../../styles/global.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import SEOHead from "../../components/SEOHead.jsx";
import { getServiceGroup } from "../../data/services.js";

const pageData = {
  group: getServiceGroup("bedroom-remodeling"),
  sub: null
};

const pageTitle = "Bedroom Renovation Services | Paramount Property Restoration";
const pageDescription = "Modern bedroom redesigns with lighting, storage, and smart layouts. Free consultation available.";
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  data-page="bedroom"
>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="services"
    service="bedroom-remodeling"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone={"+1-786-602-2217"}
    slot="head"
  />

  <UnifiedServiceTemplate group={pageData.group} sub={pageData.sub} isHub={true} />
</BaseLayout>