</BaseLayout>

<style>
  /* ===== VARIABLES LOCALES AZULES ===== */
  .contact-hero-section,
  .contact-main-section,
  .bottom-cta-section {
    --paramount-primary: #1E293B;
    --paramount-secondary: #64748B;
    --paramount-accent: #3cbced;        /* AZUL PRINCIPAL */
    --paramount-accent-hover: #2a9fd1;  /* AZUL HOVER */
    --paramount-white: #FFFFFF;
    --paramount-light: #F8FAFC;
    --paramount-emergency: #DC2626;
    --paramount-shadow: 0 4px 16px rgba(30, 41, 59, 0.08);
    --paramount-shadow-lg: 0 8px 24px rgba(30, 41, 59, 0.12);
    --paramount-radius: 8px;
    --paramount-radius-lg: 12px;
    --paramount-transition: all 0.2s ease;
    --paramount-spacing-2: 0.5rem;
    --paramount-spacing-3: 0.75rem;
    --paramount-spacing-4: 1rem;
    --paramount-spacing-6: 1.5rem;
    --paramount-spacing-8: 2rem;
    --paramount-spacing-12: 3rem;
    --paramount-font-sm: 0.875rem;
    --paramount-font-base: 1rem;
    --paramount-font-lg: 1.125rem;
    --paramount-font-xl: 1.25rem;
    --paramount-font-2xl: 1.5rem;
    --paramount-font-3xl: 1.875rem;
  }

  /* ===== HERO SECTION ===== */
  .contact-hero-section {
    position: relative;
    width: 100%;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--paramount-spacing-8);
    text-align: center;
    color: var(--paramount-white);
    background-image: url("/images/heroContact.jpg");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(30, 41, 59, 0.8), rgba(15, 23, 42, 0.9));
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-content h1 {
    font-size: clamp(3.2rem, 5vw, 5rem);
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem;
    color: var(--paramount-white);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .hero-description {
    font-size: clamp(1.2rem, 2vw, 1.25rem);
    font-weight: 400;
    max-width: 600px;
    margin: 0 auto 2rem;
    color: rgba(255, 255, 255, 0.95);
    opacity: 1;
    padding: 0 20px;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    line-height: 1.6;
  }

  /* ===== MAIN CONTENT ===== */
  .contact-main-section {
    padding: var(--paramount-spacing-12) 0;
    background: var(--paramount-light);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* ===== DUAL CTA SECTION CON BOTONES AZULES ===== */
  .dual-cta-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .emergency-cta, 
  .remodeling-cta {
    background: var(--paramount-white);
    padding: 2rem;
    border-radius: var(--paramount-radius-lg);
    box-shadow: var(--paramount-shadow);
    text-align: center;
    border-top: 4px solid;
    transition: var(--paramount-transition);
  }

  .emergency-cta:hover, 
  .remodeling-cta:hover {
    transform: translateY(-2px);
    box-shadow: var(--paramount-shadow-lg);
  }

  .emergency-cta {
    border-top-color: var(--paramount-emergency);
  }

  .remodeling-cta {
    border-top-color: var(--paramount-accent);
  }

  .cta-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    display: block;
  }

  .emergency-cta .cta-icon {
    color: var(--paramount-emergency);
  }

  .remodeling-cta .cta-icon {
    color: var(--paramount-accent);
  }

  .emergency-cta h3, 
  .remodeling-cta h3 {
    color: var(--paramount-primary);
    margin-bottom: 1rem;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .emergency-cta p, 
  .remodeling-cta p {
    color: var(--paramount-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  /* ===== BOTONES AZULES UNIFICADOS ===== */
  /* ===== BOTONES AZULES UNIFICADOS ===== */
.btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  transition: var(--paramount-transition);
  border: none;
  cursor: pointer;
  font-size: var(--paramount-font-base);
}

.btn-emergency,
.btn-remodeling {
  background: #35c3e9;
  color: var(--paramount-white);
}

.btn:hover {
  box-shadow: 0 6px 16px rgba(53, 195, 233, 0.3);
  background: #2a9fd1;
  color: white;
  transform: translateY(-2px);
}

  /* ===== CONTACT LAYOUT ===== */
  .contact-layout {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--paramount-spacing-12);
    align-items: start;
  }

  .contact-form-section {
    background: var(--paramount-white);
    padding: var(--paramount-spacing-8);
    border-radius: var(--paramount-radius-lg);
    box-shadow: var(--paramount-shadow-lg);
  }

  .form-header {
    text-align: center;
    margin-bottom: var(--paramount-spacing-8);
  }

  .form-header h2 {
    color: var(--paramount-primary);
    margin-bottom: var(--paramount-spacing-3);
    font-size: 2rem;
    font-weight: 700;
  }

  .form-header p {
    color: var(--paramount-secondary);
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  /* ===== CONTACT INFO ===== */
  .contact-info-section {
    display: flex;
    flex-direction: column;
    gap: var(--paramount-spacing-6);
  }

  .info-card {
    background: var(--paramount-white);
    padding: var(--paramount-spacing-8);
    border-radius: var(--paramount-radius-lg);
    box-shadow: var(--paramount-shadow);
  }

  .info-card h3 {
    color: var(--paramount-primary);
    margin-bottom: var(--paramount-spacing-6);
    font-size: 1.5rem;
    text-align: center;
    border-bottom: 2px solid var(--paramount-accent);
    padding-bottom: 1rem;
    font-weight: 700;
  }

  .contact-item {
    display: flex;
    gap: var(--paramount-spacing-4);
    margin-bottom: var(--paramount-spacing-6);
    padding-bottom: var(--paramount-spacing-6);
    border-bottom: 1px solid #E2E8F0;
  }

  .contact-item:last-child {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
  }

  /* EMERGENCY CONTACT DESTACADO */
  .emergency-contact {
    background: rgba(220, 38, 38, 0.05);
    padding: 1rem;
    border-radius: var(--paramount-radius);
    border: 2px solid rgba(220, 38, 38, 0.2);
  }

  .contact-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: var(--paramount-accent);
    color: var(--paramount-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
  }

  .emergency-icon {
    background: var(--paramount-emergency);
  }

  .contact-details h4 {
    color: var(--paramount-primary);
    margin-bottom: var(--paramount-spacing-2);
    font-size: 1.1rem;
    font-weight: 600;
  }

  .contact-details a {
    color: var(--paramount-accent);
    text-decoration: none;
    display: block;
    margin-bottom: var(--paramount-spacing-2);
    font-size: 1rem;
    transition: var(--paramount-transition);
  }

  .emergency-phone {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--paramount-emergency);
  }

  .contact-details a:hover {
    text-decoration: underline;
    color: var(--paramount-accent-hover);
  }

  .contact-details p {
    color: var(--paramount-secondary);
    line-height: 1.5;
    margin: 0;
  }

  .emergency-note {
    color: var(--paramount-emergency);
    font-weight: 500;
    margin-top: 0.5rem;
  }

  /* ===== BOTTOM CTA AZUL ===== */
  .bottom-cta-section {
    padding: var(--paramount-spacing-12) 0;
    background: var(--paramount-primary);
    color: var(--paramount-white);
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    margin-bottom: var(--paramount-spacing-4);
    color: var(--paramount-white);
    font-size: 2.5rem;
    font-weight: 700;
  }

  .cta-content p {
    margin-bottom: var(--paramount-spacing-6);
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: var(--paramount-spacing-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-buttons .btn {
    background: #35c3e9;
    color: var(--paramount-white);
    padding: 1rem 2rem;
  }

  .cta-buttons .btn:hover {
    background: #2a9fd1;
    transform: translateY(-2px);
    color: var(--paramount-white);
  }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 768px) {
    .dual-cta-section {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .contact-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-content h1 {
      font-size: clamp(2.5rem, 8vw, 3.5rem);
    }

    .hero-description {
      font-size: 1.1rem;
    }

    .contact-form-section,
    .info-card {
      padding: var(--paramount-spacing-6);
    }

    .contact-main-section {
      padding: var(--paramount-spacing-8) 0;
    }
  }

  @media (max-width: 480px) {
    .cta-icon {
      font-size: 2.5rem;
    }
    
    .emergency-cta, 
    .remodeling-cta {
      padding: 1.5rem;
    }

    .contact-main-section {
      padding: var(--paramount-spacing-6) 0;
    }

    .bottom-cta-section {
      padding: var(--paramount-spacing-8) 0;
    }

    .cta-content h2 {
      font-size: 2rem;
    }
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function() {
    // Smooth scroll to contact form
    const contactFormLinks = document.querySelectorAll('a[href="#contact-form"]');
    contactFormLinks.forEach(function(link) {
      link.addEventListener("click", function(e) {
        e.preventDefault();
        const formSection = document.querySelector(".contact-form-section");
        if (formSection) {
          formSection.scrollIntoView({
            behavior: "smooth",
            block: "start",
          });
        }
      });
    });

    // Emergency phone tracking
    const emergencyButtons = document.querySelectorAll('a[href^="tel:+17866022217"]');
    emergencyButtons.forEach(function(button) {
      button.addEventListener('click', function() {
        console.log('Emergency call initiated');
        
        // Google Analytics tracking si estÃ¡ disponible
        if (typeof window.gtag === 'function') {
          window.gtag('event', 'emergency_call', {
            'event_category': 'Contact',
            'event_label': 'Emergency Phone'
          });
        }
      });
    });

    // Form validation enhancement
    const contactForm = document.querySelector('#contact-form form');
    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        console.log('Contact form submitted');
        
        // Analytics tracking - JavaScript puro
        if (typeof window.gtag === 'function') {
          window.gtag('event', 'form_submit', {
            'event_category': 'Contact',
            'event_label': 'Contact Form'
          });
        }
      });
    }
  });
</script>