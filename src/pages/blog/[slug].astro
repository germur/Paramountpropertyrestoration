---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import BlogCard from "../../components/BlogCard.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Obtener posts relacionados (mismas etiquetas)
const allPosts = await getCollection("blog");
const relatedPosts = allPosts
  .filter(
    (post) =>
      post.slug !== entry.slug &&
      post.data.tags.some((tag) => entry.data.tags.includes(tag))
  )
  .slice(0, 3);

// Formatear fecha
const formattedDate = entry.data.date.toLocaleDateString("es-ES", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

// Tiempo estimado de lectura (aprox 200 palabras por minuto)
const content = await entry.render();
const wordCount = content.remarkPluginFrontmatter?.wordCount || 1000;
const readingTime = Math.ceil(wordCount / 200);
---

<BaseLayout
  title={entry.data.title}
  description={entry.data.description}
  image={entry.data.image}
>
  <article class="blog-post">
    <!-- Hero Section -->
    <header class="post-header">
      <div class="container-sm">
        <!-- Breadcrumb -->
        <nav class="breadcrumb">
          <a href="/">Inicio</a>
          <span>/</span>
          <a href="/blog">Blog</a>
          <span>/</span>
          <span>{entry.data.title}</span>
        </nav>

        <h1 class="post-title">{entry.data.title}</h1>
        <p class="post-excerpt">{entry.data.description}</p>

        <div class="post-meta">
          <div class="post-author">
            <div class="author-avatar">
              {entry.data.author.charAt(0).toUpperCase()}
            </div>
            <div class="author-info">
              <span class="author-name">Por {entry.data.author}</span>
              <time class="post-date" datetime={entry.data.date.toISOString()}>
                {formattedDate}
              </time>
            </div>
          </div>

          <div class="post-stats">
            <span class="reading-time">
              <svg
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12,6 12,12 16,14"></polyline>
              </svg>
              {readingTime} min de lectura
            </span>
          </div>
        </div>

        <div class="post-tags">
          {entry.data.tags.map((tag) => <span class="tag">{tag}</span>)}
        </div>
      </div>
    </header>

    <!-- Featured Image -->
    {
      entry.data.image && (
        <div class="post-image">
          <div class="container">
            <img src={entry.data.image} alt={entry.data.title} />
          </div>
        </div>
      )
    }

    <!-- Post Content -->
    <div class="post-content">
      <div class="container-sm">
        <div class="prose">
          <Content />
        </div>
      </div>
    </div>

    <!-- Post Footer -->
    <footer class="post-footer">
      <div class="container-sm">
        <!-- Share buttons -->
        <div class="share-section">
          <h3>Compartir este artículo</h3>
          <div class="share-buttons">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(entry.data.title)}&url=${encodeURIComponent(Astro.site + "/blog/" + entry.slug)}`}
              target="_blank"
              class="share-btn twitter"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                ></path>
              </svg>
              Twitter
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.site + "/blog/" + entry.slug)}`}
              target="_blank"
              class="share-btn facebook"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                ></path>
              </svg>
              Facebook
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.site + "/blog/" + entry.slug)}`}
              target="_blank"
              class="share-btn linkedin"
            >
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="currentColor"
              >
                <path
                  d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                ></path>
              </svg>
              LinkedIn
            </a>
            <button class="share-btn copy-link" id="copy-link">
              <svg
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
                ></path>
                <path
                  d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
                ></path>
              </svg>
              Copiar enlace
            </button>
          </div>
        </div>

        <!-- Author Bio -->
        <div class="author-bio">
          <div class="author-avatar-large">
            {entry.data.author.charAt(0).toUpperCase()}
          </div>
          <div class="author-details">
            <h4>{entry.data.author}</h4>
            <p>
              Especialista en desarrollo web y marketing digital. Apasionado por
              crear soluciones innovadoras que ayuden a las empresas a crecer en
              el mundo digital.
            </p>
          </div>
        </div>
      </div>
    </footer>
  </article>

  <!-- Related Posts -->
  {
    relatedPosts.length > 0 && (
      <section class="related-posts section">
        <div class="container">
          <h2 class="section-title">Artículos Relacionados</h2>
          <div class="related-grid">
            {relatedPosts.map((post) => (
              <BlogCard
                title={post.data.title}
                description={post.data.description}
                author={post.data.author}
                date={post.data.date}
                slug={post.slug}
                tags={post.data.tags}
                image={post.data.image}
              />
            ))}
          </div>
        </div>
      </section>
    )
  }

  <!-- Newsletter CTA -->
  <section class="newsletter-cta section section-bg">
    <div class="container-sm">
      <div class="newsletter-content">
        <h2>¿Te gustó este artículo?</h2>
        <p>
          Suscríbete a nuestro newsletter y recibe contenido valioso
          directamente en tu correo.
        </p>
        <form class="newsletter-form">
          <input type="email" placeholder="Tu correo electrónico" required />
          <button type="submit" class="btn">Suscribirme</button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .blog-post {
    margin-bottom: var(--spacing-16);
  }

  .post-header {
    background: var(--bg-secondary);
    padding: var(--spacing-12) 0;
  }

  .breadcrumb {
    margin-bottom: var(--spacing-6);
    font-size: var(--font-size-sm);
    color: var(--text-light);
  }

  .breadcrumb a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumb span {
    margin: 0 var(--spacing-2);
  }

  .post-title {
    font-size: var(--font-size-4xl);
    line-height: 1.2;
    margin-bottom: var(--spacing-6);
    color: var(--text-primary);
  }

  .post-excerpt {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-8);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-6);
    flex-wrap: wrap;
    gap: var(--spacing-4);
  }

  .post-author {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
  }

  .author-avatar {
    width: 48px;
    height: 48px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: var(--font-size-lg);
  }

  .author-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
  }

  .author-name {
    font-weight: 500;
    color: var(--text-primary);
  }

  .post-date {
    color: var(--text-light);
    font-size: var(--font-size-sm);
  }

  .post-stats {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
  }

  .reading-time {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    color: var(--text-light);
    font-size: var(--font-size-sm);
  }

  .post-tags {
    display: flex;
    gap: var(--spacing-2);
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-primary);
    color: white;
    padding: var(--spacing-1) var(--spacing-3);
    border-radius: var(--border-radius);
    font-size: var(--font-size-sm);
    font-weight: 500;
  }

  .post-image {
    margin: var(--spacing-8) 0;
  }

  .post-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .post-content {
    padding: var(--spacing-12) 0;
  }

  .prose {
    max-width: none;
    line-height: 1.7;
  }

  .prose h2 {
    font-size: var(--font-size-2xl);
    margin-top: var(--spacing-12);
    margin-bottom: var(--spacing-6);
    color: var(--text-primary);
  }

  .prose h3 {
    font-size: var(--font-size-xl);
    margin-top: var(--spacing-8);
    margin-bottom: var(--spacing-4);
    color: var(--text-primary);
  }

  .prose p {
    margin-bottom: var(--spacing-6);
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
  }

  .prose ul,
  .prose ol {
    margin-bottom: var(--spacing-6);
    padding-left: var(--spacing-6);
  }

  .prose li {
    margin-bottom: var(--spacing-2);
    color: var(--text-secondary);
  }

  .prose blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-6);
    margin: var(--spacing-8) 0;
    font-style: italic;
    color: var(--text-secondary);
    background: var(--bg-secondary);
    padding: var(--spacing-6);
    border-radius: var(--border-radius);
  }

  .prose code {
    background: var(--bg-secondary);
    padding: var(--spacing-1) var(--spacing-2);
    border-radius: var(--border-radius);
    font-size: 0.9em;
    color: var(--color-primary);
  }

  .prose pre {
    background: var(--bg-dark);
    color: white;
    padding: var(--spacing-6);
    border-radius: var(--border-radius);
    overflow-x: auto;
    margin: var(--spacing-6) 0;
  }

  .post-footer {
    border-top: 1px solid #e2e8f0;
    padding-top: var(--spacing-8);
  }

  .share-section {
    margin-bottom: var(--spacing-12);
  }

  .share-section h3 {
    margin-bottom: var(--spacing-4);
    color: var(--text-primary);
  }

  .share-buttons {
    display: flex;
    gap: var(--spacing-3);
    flex-wrap: wrap;
  }

  .share-btn {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-4);
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    font-size: var(--font-size-sm);
  }

  .share-btn.twitter {
    background: #1da1f2;
    color: white;
  }

  .share-btn.facebook {
    background: #4267b2;
    color: white;
  }

  .share-btn.linkedin {
    background: #0077b5;
    color: white;
  }

  .share-btn.copy-link {
    background: var(--bg-secondary);
    color: var(--text-primary);
  }

  .share-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }

  .author-bio {
    display: flex;
    gap: var(--spacing-4);
    background: var(--bg-secondary);
    padding: var(--spacing-6);
    border-radius: var(--border-radius-lg);
  }

  .author-avatar-large {
    width: 80px;
    height: 80px;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: var(--font-size-2xl);
    flex-shrink: 0;
  }

  .author-details h4 {
    margin-bottom: var(--spacing-2);
    color: var(--text-primary);
  }

  .author-details p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .section-title {
    text-align: center;
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-8);
    color: var(--text-primary);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-6);
  }

  .newsletter-cta {
    text-align: center;
  }

  .newsletter-content h2 {
    margin-bottom: var(--spacing-4);
    color: var(--text-primary);
  }

  .newsletter-content p {
    margin-bottom: var(--spacing-6);
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
  }

  .newsletter-form {
    display: flex;
    max-width: 400px;
    margin: 0 auto;
    gap: var(--spacing-3);
  }

  .newsletter-form input {
    flex: 1;
    padding: var(--spacing-3);
    border: 2px solid #e2e8f0;
    border-radius: var(--border-radius);
    font-size: var(--font-size-base);
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: var(--font-size-3xl);
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }

    .post-image img {
      height: 250px;
    }

    .author-bio {
      flex-direction: column;
      text-align: center;
    }

    .author-avatar-large {
      align-self: center;
    }

    .share-buttons {
      justify-content: center;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Copy link functionality
    const copyBtn = document.getElementById("copy-link");
    copyBtn?.addEventListener("click", async () => {
      try {
        await navigator.clipboard.writeText(window.location.href);
        copyBtn.innerHTML = `
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 12l2 2 4-4"/>
            <circle cx="12" cy="12" r="10"/>
          </svg>
          ¡Copiado!
        `;
        setTimeout(() => {
          copyBtn.innerHTML = `
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
            </svg>
            Copiar enlace
          `;
        }, 2000);
      } catch (err) {
        console.error("Error al copiar el enlace:", err);
      }
    });

    // Newsletter form
    const newsletterForm = document.querySelector(
      ".newsletter-form"
    ) as HTMLFormElement;
    newsletterForm?.addEventListener("submit", (e: Event) => {
      e.preventDefault();
      const target = e.target as HTMLFormElement;
      if (target) {
        const emailInput = target.querySelector(
          'input[type="email"]'
        ) as HTMLInputElement;
        const email = emailInput?.value;
        console.log("Newsletter subscription:", email);
        alert("¡Gracias por suscribirte! Te mantendremos informado.");
        target.reset();
      }
    });
  });
</script>
