<script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script is:inline>
  (function () {
    const brandColors = {
      darkBlue: "#2a9fd1",
      midBlue: "#35c3e9",
      lightBlue: "#90E0EF",
      accent: "#60c9e6",
      gray: "#cbd5e1",
    };

    const commonOptions = {
      plugins: {
        tooltip: {
          backgroundColor: "#ffffff",
          titleColor: "var(--color-primary)",
          bodyColor: "var(--color-primary)",
          borderColor: "#e2e8f0",
          borderWidth: 1,
          padding: 12,
          displayColors: true,
          callbacks: {
            title: function (tooltipItems) {
              const item = tooltipItems[0];
              if (
                !item ||
                !item.chart ||
                !item.chart.data ||
                !item.chart.data.labels
              ) {
                return "";
              }
              let label = item.chart.data.labels[item.dataIndex];
              if (Array.isArray(label)) {
                return label.join(" ");
              }
              return label;
            },
          },
        },
        legend: {
          labels: {
            color: "var(--color-primary)",
            padding: 15,
            font: {
              size: 13,
            },
          },
        },
      },
    };

    // Symptoms Bar Chart
    const symptomsCtx = document.getElementById("symptomsChart");
    if (symptomsCtx) {
      new Chart(symptomsCtx, {
        type: "bar",
        data: {
          labels: [
            "Respiratory Issues",
            "Cognitive & Neurological",
            "Skin Irritation",
            "Systemic & Fatigue",
          ],
          datasets: [
            {
              label: "Reported Prevalence (%)",
              data: [75, 45, 30, 60],
              backgroundColor: [
                brandColors.darkBlue,
                brandColors.midBlue,
                brandColors.accent,
                brandColors.lightBlue,
              ],
              borderColor: "#ffffff",
              borderWidth: 2,
              borderRadius: 6,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            ...commonOptions.plugins,
            legend: {
              display: false,
            },
          },
          scales: {
            y: {
              beginAtZero: true,
              max: 100,
              title: {
                display: true,
                text: "Prevalence (%)",
                color: "var(--color-primary)",
                font: {
                  size: 13,
                  weight: "bold",
                },
              },
              ticks: {
                color: "#64748b",
              },
              grid: {
                color: "#e2e8f0",
              },
            },
            x: {
              ticks: {
                color: "#64748b",
              },
              grid: {
                display: false,
              },
            },
          },
        },
      });
    }

    // Risk Doughnut Chart
    const riskCtx = document.getElementById("riskChart");
    if (riskCtx) {
      new Chart(riskCtx, {
        type: "doughnut",
        data: {
          labels: [
            "Asthma Sufferers",
            "Allergy Sufferers",
            "Immunocompromised",
            "Other Sensitive Individuals",
          ],
          datasets: [
            {
              label: "Population Group",
              data: [25, 35, 20, 20],
              backgroundColor: [
                brandColors.darkBlue,
                brandColors.midBlue,
                brandColors.accent,
                brandColors.lightBlue,
              ],
              borderColor: "#ffffff",
              borderWidth: 3,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            ...commonOptions.plugins,
            legend: {
              position: "bottom",
              labels: {
                color: "var(--color-primary)",
                padding: 15,
                usePointStyle: true,
                font: {
                  size: 12,
                },
              },
            },
          },
        },
      });
    }

    // Medical Tests Bar Chart
    const testsCtx = document.getElementById("testsChart");
    if (testsCtx) {
      new Chart(testsCtx, {
        type: "bar",
        data: {
          labels: [
            "Skin Prick Test (Allergy)",
            "Blood Test (IgE Antibodies)",
            "Blood Test (Mycotoxins)",
            "Urine Mycotoxin Test",
          ],
          datasets: [
            {
              label: "Clinical Utility / Commonality (%)",
              data: [70, 85, 40, 60],
              backgroundColor: [
                brandColors.darkBlue,
                brandColors.midBlue,
                brandColors.accent,
                brandColors.lightBlue,
              ],
              borderColor: "#ffffff",
              borderWidth: 2,
              borderRadius: 6,
            },
          ],
