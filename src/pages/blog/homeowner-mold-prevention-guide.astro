<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navButtons = document.querySelectorAll(".mold-nav-btn");
    const sections = document.querySelectorAll(".mold-content-section");
    const accordionHeaders = document.querySelectorAll(
      ".mold-accordion-header",
    );

    function showSection(sectionId) {
      sections.forEach((section) => {
        section.classList.remove("mold-content-section-active");
      });
      navButtons.forEach((btn) => {
        btn.classList.remove("mold-nav-btn-active");
      });

      const activeSection = document.getElementById(
        `mold-content-${sectionId}`,
      );
      const activeButton = document.querySelector(
        `[data-section="${sectionId}"]`,
      );

      if (activeSection) {
        activeSection.classList.add("mold-content-section-active");
      }
      if (activeButton) {
        activeButton.classList.add("mold-nav-btn-active");
      }
    }

    navButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const sectionId = btn.dataset.section;
        showSection(sectionId);
      });
    });

    accordionHeaders.forEach((header) => {
      header.addEventListener("click", () => {
        const contentId = header.dataset.accordion + "-content";
        const content = document.getElementById(contentId);
        if (content) {
          const isVisible = content.style.display === "block";
          document
            .querySelectorAll(".mold-accordion-content")
            .forEach((c) => (c.style.display = "none"));
          content.style.display = isVisible ? "none" : "block";
        }
      });
    });

    const totalTasks = document.querySelectorAll(".mold-checkbox").length;
    const progressChartCtx = document.getElementById("mold-progress-chart");
    let progressChart;

    const chartData = {
      labels: ["Complete", "Remaining"],
      datasets: [
        {
          data: [0, totalTasks],
          backgroundColor: ["#2ECC71", "#BDC3C7"],
          hoverOffset: 4,
        },
      ],
    };

    const chartOptions = {
      maintainAspectRatio: true,
      responsive: true,
      cutout: "75%",
      plugins: {
        legend: { display: false },
        tooltip: {
          callbacks: {
            label: function (context) {
              return `${context.label}: ${context.parsed} task(s)`;
            },
          },
        },
      },
    };

    if (progressChartCtx) {
      progressChart = new Chart(progressChartCtx, {
        type: "doughnut",
        data: chartData,
        options: chartOptions,
      });
    }

    function updateProgress() {
      const checkedTasks = document.querySelectorAll(
        ".mold-checkbox:checked",
      ).length;
      const remainingTasks = totalTasks - checkedTasks;

      if (progressChart) {
        progressChart.data.datasets[0].data = [checkedTasks, remainingTasks];
        progressChart.update();
      }

      const progressTextEl = document.getElementById("mold-progress-text");
      if (progressTextEl) {
        if (checkedTasks === totalTasks) {
          progressTextEl.innerText = "100% Complete! Great Job!";
          progressTextEl.style.color = "#166534";
        } else {
          progressTextEl.innerText = `${checkedTasks}/${totalTasks} Tasks Complete`;
          progressTextEl.style.color = "#2ECC71";
        }
      }
    }

    document.querySelectorAll(".mold-checkbox").forEach((checkbox) => {
      checkbox.addEventListener("change", updateProgress);
    });

    updateProgress();
  });
</script>
