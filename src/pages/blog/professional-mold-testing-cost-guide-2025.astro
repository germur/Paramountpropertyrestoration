<script>
  import Chart from "chart.js/auto";

  document.addEventListener("DOMContentLoaded", () => {
    const brandColors = ["#35c3e9", "#2a9fd1", "#FF6B35", "#e85d2a", "#1e8ab0"];

    // Average Cost Doughnut Chart
    const ctx1 = document.getElementById(
      "averageCostChart",
    ) as HTMLCanvasElement;
    if (ctx1) {
      new Chart(ctx1, {
        type: "doughnut",
        data: {
          labels: ["Typical Range ($300-$700)", "Complex Cases ($700+)"],
          datasets: [
            {
              data: [70, 30],
              backgroundColor: [brandColors[0], brandColors[2]],
              borderColor: "#ffffff",
              borderWidth: 3,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: {
              position: "bottom",
              labels: {
                color: "#374151",
                padding: 15,
                font: {
                  size: 13,
                },
              },
            },
            tooltip: {
              backgroundColor: "rgba(53, 195, 233, 0.95)",
              padding: 12,
              titleColor: "#ffffff",
              bodyColor: "#ffffff",
              callbacks: {
                label: function (context) {
                  return ` ${context.label}: ${context.parsed}%`;
                },
              },
            },
          },
        },
      });
    }

    // Service Cost Horizontal Bar Chart
    const ctx2 = document.getElementById(
      "serviceCostChart",
    ) as HTMLCanvasElement;
    if (ctx2) {
      new Chart(ctx2, {
        type: "bar",
        data: {
          labels: [
            "Visual Inspection",
            "Air Sampling (per sample)",
            "Surface Sampling (per sample)",
            "Full Inspection (Average Home)",
          ],
          datasets: [
            {
              label: "Average Cost (USD)",
              data: [225, 112, 87, 675],
              backgroundColor: [
                brandColors[0],
                brandColors[1],
                brandColors[2],
                brandColors[3],
              ],
              borderRadius: 6,
              borderWidth: 0,
            },
          ],
        },
        options: {
          indexAxis: "y",
          responsive: true,
          maintainAspectRatio: true,
          scales: {
            x: {
              beginAtZero: true,
              ticks: {
                callback: function (value) {
                  return "$" + value;
                },
                color: "#4b5563",
                font: {
                  size: 12,
                },
              },
              grid: {
                color: "#e5e7eb",
              },
            },
            y: {
              ticks: {
                color: "#374151",
                font: {
                  size: 12,
                  weight: "bold",
                },
              },
              grid: {
                display: false,
              },
            },
          },
          plugins: {
            legend: {
              display: false,
            },
            tooltip: {
              backgroundColor: "rgba(53, 195, 233, 0.95)",
              padding: 12,
              titleColor: "#ffffff",
              bodyColor: "#ffffff",
              callbacks: {
                label: function (context) {
                  return ` Average Cost: $${context.parsed.x}`;
                },
              },
            },
          },
        },
      });
    }
  });
</script>
