    list-style: disc;
    padding-left: 1.5rem;
    color: #475569;
  }

  .comparison-list li {
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .takeaway {
    font-size: 1.125rem;
    color: #1e293b;
    text-align: center;
    margin-top: 2rem;
    padding: 1.5rem;
    background: #e6f7fb;
    border-radius: 8px;
    line-height: 1.7;
  }

  .takeaway strong {
    color: #2a9fd1;
  }

  /* Charts Grid */
  .charts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  @media (max-width: 768px) {
    .charts-grid {
      grid-template-columns: 1fr;
    }
  }

  .chart-section {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .chart-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2a9fd1;
    text-align: center;
    margin-bottom: 1rem;
  }

  .chart-description {
    color: #64748b;
    text-align: center;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .chart-container {
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    height: 300px;
  }

  .chart-legend {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e2e8f0;
  }

  .chart-legend p {
    color: #64748b;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
  }

  /* Process Steps */
  .process-steps {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .process-step {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: #f1f5f9;
    border-radius: 8px;
  }

  .step-number {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    background: #35c3e9;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.125rem;
  }

  .step-content h3 {
    font-size: 1rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.5rem;
  }

  .step-content p {
    color: #64748b;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .step-arrow {
    text-align: center;
    color: #35c3e9;
    font-size: 1.5rem;
    font-weight: 700;
  }

  /* Comparison Chart */
  .comparison-chart-container {
    width: 100%;
    max-width: 900px;
    height: 400px;
    margin: 2rem auto;
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  @media (max-width: 768px) {
    .comparison-chart-container {
      height: 500px;
    }
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #35c3e9 0%, #2a9fd1 100%);
    color: white;
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
    margin: 4rem 0;
  }

  .cta-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

