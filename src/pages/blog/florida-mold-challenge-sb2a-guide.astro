  .guide-header {
    text-align: center;
    margin: 3rem 0 4rem;
  }

  .guide-title {
    font-size: 3rem;
    font-weight: 700;
    color: #2a9fd1;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .guide-subtitle {
    font-size: 1.5rem;
    color: #35c3e9;
  }

  @media (max-width: 768px) {
    .guide-title {
      font-size: 2rem;
    }

    .guide-subtitle {
      font-size: 1.125rem;
    }
  }

  /* Section Styles */
  .section {
    margin-bottom: 4rem;
  }

  .section-title {
