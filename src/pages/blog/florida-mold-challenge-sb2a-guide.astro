    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    padding: 1rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .cta-button.primary {
    background: #ff6b35;
    color: white;
  }

  .cta-button.primary:hover {
    background: #e85d2a;
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(255, 107, 53, 0.4);
  }

  .cta-button.secondary {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2px solid white;
  }

  .cta-button.secondary:hover {
    background: white;
    color: #2a9fd1;
  }

  /* Resources Section */
  .resources-section {
    padding: 3rem 0;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .resource-category h3 {
    color: #2a9fd1;
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .resource-category ul {
    list-style: none;
    padding: 0;
  }

  .resource-category li {
    margin-bottom: 0.5rem;
  }

  .resource-category a {
    color: #35c3e9;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .resource-category a:hover {
    color: #ff6b35;
  }

  /* Links */
  .inline-link {
    color: #35c3e9;
    text-decoration: none;
    border-bottom: 1px solid rgba(53, 195, 233, 0.3);
    transition: all 0.3s ease;
  }

  .inline-link:hover {
    color: #ff6b35;
    border-bottom-color: #ff6b35;
  }

  .inline-link-light {
    color: white;
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
  }

  .inline-link-light:hover {
    border-bottom-color: white;
  }
</style>

<script>
  import Chart from "chart.js/auto";

  document.addEventListener("DOMContentLoaded", () => {
    const brandColors = ["#35c3e9", "#2a9fd1", "#1e8ab0", "#90E0EF", "#CAF0F8"];
    const chartLabelColor = "#1e293b";
    const chartGridColor = "#e2e8f0";

    // Mold Types Doughnut Chart
    const ctxMold = document.getElementById(
      "moldTypesChart",
    ) as HTMLCanvasElement;
    if (ctxMold) {
      new Chart(ctxMold, {
        type: "doughnut",
        data: {
          labels: [
            "Aspergillus/Penicillium",
            "Cladosporium",
            "Stachybotrys (Black Mold)",
            "Other",
          ],
          datasets: [
            {
              data: [45, 25, 15, 15],
              backgroundColor: [
                brandColors[0],
                brandColors[1],
                brandColors[2],
                brandColors[3],
              ],
              borderColor: "#ffffff",
              borderWidth: 2,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: "bottom",
              labels: {
                color: chartLabelColor,
                padding: 15,
                font: {
                  size: 12,
                },
              },
            },
            tooltip: {
              backgroundColor: "rgba(53, 195, 233, 0.95)",
              padding: 12,
              titleColor: "#ffffff",
              bodyColor: "#ffffff",
              callbacks: {
                label: function (context) {
                  return ` ${context.label}: ${context.parsed}%`;
                },
              },
            },
          },
        },
      });
    }

    // Comparison Bar Chart
    const ctxCompare = document.getElementById(
      "comparisonChart",
    ) as HTMLCanvasElement;
    if (ctxCompare) {
      new Chart(ctxCompare, {
        type: "bar",
        data: {
          labels: [
            "Insurance Claim Approval (%)",
            "Report Accuracy - Industry Standard (%)",
            "Time to Resolution (Days)",
          ],
          datasets: [
            {
              label: "Local Certified Expert",
              data: [90, 95, 14],
              backgroundColor: brandColors[0],
              borderRadius: 6,
            },
            {
              label: "National Chain / Non-Specialist",
              data: [55, 60, 45],
              backgroundColor: brandColors[3],
              borderRadius: 6,
            },
          ],
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          indexAxis: "y",
          plugins: {
            legend: {
              position: "top",
              labels: {
                color: chartLabelColor,
                padding: 15,
                font: {
                  size: 13,
                },
              },
            },
            tooltip: {
              backgroundColor: "rgba(53, 195, 233, 0.95)",
              padding: 12,
              titleColor: "#ffffff",
              bodyColor: "#ffffff",
            },
          },
          scales: {
            x: {
              beginAtZero: true,
              title: {
                display: true,
                text: "Value (Percentage or Days)",
                color: chartLabelColor,
                font: {
                  size: 13,
                  weight: "600",
                },
              },
              ticks: {
                color: chartLabelColor,
              },
              grid: {
                color: chartGridColor,
              },
            },
            y: {
              ticks: {
                color: chartLabelColor,
                font: {
                  size: 12,
                },
              },
              grid: {
                display: false,
              },
            },
          },
        },
      });
    }
  });
</script>
