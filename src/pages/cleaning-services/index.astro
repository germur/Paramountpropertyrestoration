---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/pages/cleaning.css";
import ProtocolTabs from "../../components/cleaning/ProtocolTabs.jsx";
import PricingCards from "../../components/cleaning/PricingCards.jsx";
import BenefitsBar from "../../components/cleaning/BenefitsBar.jsx";
import ProblemSolutionBento from "../../components/cleaning/ProblemSolutionBento.jsx";
import BookingWizard from "../../components/cleaning/calculator/BookingWizard.jsx";
import { cleaningVertical } from "../../data/cleaning.js";
import { Image } from "astro:assets";
import cleaningHeroBg from "../../assets/images/cleaning-hero.jpg";

const pageTitle = "Clinical Grade Home Cleaning Services | Paramount Property Restoration";
const pageDescription = "More than just cleaning. We provide clinical grade hygiene and mold prevention for Florida homes. IICRC certified technicians.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  
  <!-- Hero Section -->
  <section class="cleaning-hero">
    <Image 
      src={cleaningHeroBg} 
      alt="Professional clinical cleaning team in a modern Florida office - Paramount Property Restoration" 
      class="hero-bg-img"
      widths={[640, 1024, 1920]}
      sizes="100vw"
      format="webp"
    />
    <div class="hero-overlay"></div>
    
    <div class="hero-container">
      <!-- Left Content -->
      <div class="hero-content">
        <span class="hero-tag">Services Available in All Florida</span>
        <h1 class="hero-title">
          More than Cleaning.<br/>
          <span class="text-orange">Clinical Hygiene</span> for your Home.
        </h1>
        <p class="hero-subtitle">
          We elevate the residential cleaning standard in Florida. Restoration technology applied to your home's daily maintenance. 100% Guaranteed.
        </p>
        
        <div class="trust-bar">
          <div class="trust-item"><i class="fas fa-shield-alt"></i> IICRC Certified</div>
          <div class="trust-item"><i class="fas fa-star"></i> 4.9/5 Google Reviews</div>
          <div class="trust-item"><i class="fas fa-award"></i> BBB Accredited</div>
          <div class="trust-item"><i class="fas fa-check-circle"></i> Bonded & Insured</div>
        </div>
      </div>

      <!-- Right Form Card -->
      <div class="hero-form-card">
        <h3 class="form-title">Get Fast Quote</h3>
        <p class="form-subtitle">
          <i class="fas fa-clock"></i> No commitment â€¢ Response in &lt; 2 hours
        </p>
        
        <form action="/contact" class="hero-form">
          <div class="form-group">
            <input type="text" placeholder="Zip Code" class="form-input" />
          </div>
          <div class="form-group">
            <select class="form-select">
              <option value="">Select Service Type...</option>
              <option value="deep">Deep Cleaning (Restorative)</option>
              <option value="maintenance">Weekly Maintenance</option>
              <option value="move">Move-In / Move-Out</option>
            </select>
          </div>
          <div class="form-group">
            <select class="form-select">
              <option value="">Approx. Home Size...</option>
              <option value="small">Under 1,500 sq ft</option>
              <option value="medium">1,500 - 2,500 sq ft</option>
              <option value="large">Over 2,500 sq ft</option>
            </select>
          </div>
          <button type="submit" class="hero-btn">Check Pricing & Availability</button>
        </form>
        
        <p class="form-footer">
          By sending, you accept our terms of service and privacy policy.
        </p>
      </div>
    </div>
  </section>

  <!-- Benefits Bar with Modern Icons -->
  <BenefitsBar client:visible />

  <!-- Problem/Solution: The Florida Factor -->
  <section class="problem-solution">
    <div class="container">
      <div style="text-align: center; margin-bottom: 3rem;">
        <span class="section-tag">The Florida Challenge</span>
        <h2 class="section-title">Is Your Home Really Clean?</h2>
        <p class="section-desc">In Florida's subtropical climate, standard cleaning is not enough to protect your health and investment.</p>
      </div>

      <ProblemSolutionBento client:visible />
    </div>
  </section>

  {/* NEW CALCULATOR SECTION */}
  <section className="py-20 bg-white" style="padding: 5rem 0; background: #fff;">
    <div className="container mx-auto px-4" style="max-width: 1200px; margin: 0 auto; padding: 0 1rem;">
      <div style="text-align: center; margin-bottom: 3rem; max-width: 800px; margin-left: auto; margin-right: auto;">
        <h2 className="section-title">Customize Your Service</h2>
        <p className="section-desc">
          Use our smart calculator to build a plan that fits your exact needs. 
          Get an instant estimate and schedule in minutes.
        </p>
      </div>
      
      <BookingWizard client:only="react" />
    </div>
  </section>

  <!-- The Protocol -->
  <section class="protocol-section">
    <div class="container">
      <span class="section-tag" style="background: #e0f2fe; color: #0284c7; padding: 4px 12px; border-radius: 12px; font-size: 0.8rem; font-weight: 700;">Our Process</span>
      <h2 class="section-title">25-Point Hygiene Protocol</h2>
      <p class="section-desc">Each service follows our exhaustive protocol, developed by restoration experts and certified under IICRC standards.</p>
      
      <ProtocolTabs client:visible />
    </div>
  </section>

  <!-- Pricing Packages -->
  <section class="pricing-section">
    <div class="container">
      <div style="text-align: center; margin-bottom: 3rem;">
        <h2 class="section-title">Transparent Pricing</h2>
        <p class="section-desc">Choose the level of care your home needs. No contracts, ever.</p>
      </div>
      
      <PricingCards />
    </div>
  </section>

  <!-- Final CTA -->
  <section style="background: #0f172a; color: white; padding: 6rem 0; text-align: center; position: relative; overflow: hidden;">
    <!-- Simple Pattern Overlay -->
    <div style="position: absolute; top:0; left:0; width:100%; height:100%; opacity: 0.05; background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 30px 30px;"></div>
    
    <div class="container" style="position: relative; z-index: 5;">
      <div style="margin-bottom: 2rem;">
        <span style="border: 1px solid rgba(255,255,255,0.2); padding: 5px 15px; border-radius: 20px; font-size: 0.9rem;">100% Satisfaction Guarantee</span>
      </div>
      
      <h2 style="color: white; font-size: clamp(2rem, 4vw, 3rem); font-weight: 800; margin-bottom: 1.5rem; line-height: 1.2;">
        Your home is your biggest investment.<br/>
        <span class="text-orange">Take care of it with the experts.</span>
      </h2>
      
      <p style="color: white; margin-bottom: 3rem; font-size: 1.2rem; opacity: 0.9; max-width: 700px; margin-left: auto; margin-right: auto;">
        Request your free hygiene evaluation today and discover the Paramount difference. No commitment, no pressure.
      </p>
      
      <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        <a href="/contact" class="hero-btn" style="width: auto; padding: 1rem 3rem; display: flex; align-items: center; gap: 0.5rem; text-decoration: none;">
          <i class="fas fa-calendar-check"></i> Schedule Free Evaluation
        </a>
        <a href="tel:4075550123" style="padding: 1rem 3rem; border: 1px solid rgba(255,255,255,0.3); border-radius: 10px; color: white; text-decoration: none; font-weight: 600; display: flex; align-items: center; gap: 0.5rem; transition: all 0.2s;" onmouseover="this.style.borderColor='white'; this.style.background='rgba(255,255,255,0.05)'" onmouseout="this.style.borderColor='rgba(255,255,255,0.3)'; this.style.background='transparent'">
          <i class="fas fa-phone"></i> (407) 555-0123
        </a>
      </div>
      
      <p style="margin-top: 3rem; font-size: 0.9rem; opacity: 0.5;">
        Service available in Orlando, Kissimmee, Sanford, Winter Park, Lake Mary and surrounding areas.
      </p>
    </div>
  </section>

</BaseLayout>
