---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/pages/cleaning.css";
import ProtocolTabs from "../../components/cleaning/ProtocolTabs.jsx";
import PricingCards from "../../components/cleaning/PricingCards.jsx";
import BenefitsBar from "../../components/cleaning/BenefitsBar.jsx";
import ProblemSolutionBento from "../../components/cleaning/ProblemSolutionBento.jsx";
import BookingWizard from "../../components/cleaning/calculator/BookingWizard.jsx";
import { cleaningVertical } from "../../data/cleaning.js";
import { Image } from "astro:assets";
import cleaningHeroBg from "../../assets/images/cleaning-hero.jpg";

const pageTitle =
  "Commercial Cleaning Services & Janitorial | Paramount Property Restoration";
const pageDescription =
  "Reliable commercial cleaning and janitorial services for Florida businesses. Office cleaning, floor care, and day porters. Bonded & Insured.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="cleaning-hero">
    <Image
      src={cleaningHeroBg}
      alt="Professional commercial cleaning team in a modern Florida office"
      class="hero-bg-img"
      widths={[640, 1024, 1920]}
      sizes="100vw"
      format="webp"
    />
    <div class="hero-overlay"></div>

    <div class="hero-container">
      <!-- Left Content -->
      <div class="hero-content">
        <span class="hero-tag">Serving Florida Businesses</span>
        <h1 class="hero-title">
          More than Janitorial.<br />
          <span class="text-orange">Asset Protection</span> for your Facility.
        </h1>
        <p class="hero-subtitle">
          We elevate the standard of commercial cleaning. Reliable, consistent,
          and scientifically verified hygiene for offices, medical centers, and
          retail.
        </p>

        <div class="trust-bar">
          <div class="trust-item">
            <i class="fas fa-shield-alt"></i> Licensed & Insured
          </div>
          <div class="trust-item">
            <i class="fas fa-user-tie"></i> Background Checked Staff
          </div>
          <div class="trust-item">
            <i class="fas fa-file-contract"></i> Monthly ATP Reporting
          </div>
          <div class="trust-item">
            <i class="fas fa-clock"></i> 24/7 Availability
          </div>
        </div>
      </div>

      <!-- Right Form Card -->
      <div class="hero-form-card">
        <h3 class="form-title">Get Fast Proposal</h3>
        <p class="form-subtitle">
          <i class="fas fa-clock"></i> No commitment • Site walk in &lt; 24 hours
        </p>

        <form action="/contact" class="hero-form">
          <div class="form-group">
            <input type="text" placeholder="Zip Code" class="form-input" />
          </div>
          <div class="form-group">
            <select class="form-select">
              <option value="">Facility Type...</option>
              <option value="office">Corporate Office</option>
              <option value="medical">Medical / Dental</option>
              <option value="retail">Retail / Showroom</option>
              <option value="industrial">Industrial / Warehouse</option>
              <option value="hoa">HOA / Condo Common Areas</option>
            </select>
          </div>
          <div class="form-group">
            <select class="form-select">
              <option value="">Approx. Sq Footage...</option>
              <option value="small">Under 2,500 sq ft</option>
              <option value="medium">2,500 - 10,000 sq ft</option>
              <option value="large">10,000 - 50,000 sq ft</option>
              <option value="xlarge">Over 50,000 sq ft</option>
            </select>
          </div>
          <button type="submit" class="hero-btn"
            >Request Commercial Quote</button
          >
        </form>

        <p class="form-footer">
          Your privacy is protected. We never sell your data.
        </p>
      </div>
    </div>
  </section>

  <!-- Benefits Bar with Modern Icons -->
  <BenefitsBar client:visible />

  <!-- Problem/Solution: The Business Factor -->
  <section class="problem-solution">
    <div class="container">
      <div style="text-align: center; margin-bottom: 3rem;">
        <span class="section-tag">The Business Challenge</span>
        <h2 class="section-title">
          Is Your Facility Making a Good Impression?
        </h2>
        <p class="section-desc">
          In Florida's competitive market, a spotless facility isn't just about
          hygiene—it's about brand reputation and employee productivity.
        </p>
      </div>

      <ProblemSolutionBento client:visible />
    </div>
  </section>

  <!-- NEW CALCULATOR SECTION -->
  <section class="py-20 bg-white" style="padding: 5rem 0; background: #fff;">
    <div
      class="container mx-auto px-4"
      style="max-width: 1200px; margin: 0 auto; padding: 0 1rem;"
    >
      <div
        style="text-align: center; margin-bottom: 3rem; max-width: 800px; margin-left: auto; margin-right: auto;"
      >
        <h2 class="section-title">Customize Your Service Plan</h2>
        <p class="section-desc">
          Build a janitorial plan that fits your facility's specific needs and
          budget. Get an instant estimate for daily, weekly, or monthly
          services.
        </p>
      </div>

      <BookingWizard client:only="react" />
    </div>
  </section>

  <!-- The Protocol -->
  <section class="protocol-section">
    <div class="container">
      <span
        class="section-tag"
        style="background: #e0f2fe; color: #0284c7; padding: 4px 12px; border-radius: 12px; font-size: 0.8rem; font-weight: 700;"
        >Our Process</span
      >
      <h2 class="section-title">Commercial Hygiene Protocol</h2>
      <p class="section-desc">
        Standardized workflows to ensure consistent results across your entire
        property, every single night.
      </p>

      <ProtocolTabs client:visible />
    </div>
  </section>

  <!-- Pricing Packages -->
  <section class="pricing-section">
    <div class="container">
      <div style="text-align: center; margin-bottom: 3rem;">
        <h2 class="section-title">Service Tiers</h2>
        <p class="section-desc">
          From daily porter services to periodic deep cleans. Choose the level
          of care your business demands.
        </p>
      </div>

      <PricingCards />
    </div>
  </section>

  <!-- Final CTA -->
  <section
    style="background: #0f172a; color: white; padding: 6rem 0; text-align: center; position: relative; overflow: hidden;"
  >
    <!-- Simple Pattern Overlay -->
    <div
      style="position: absolute; top:0; left:0; width:100%; height:100%; opacity: 0.05; background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 30px 30px;"
    >
    </div>

    <div class="container" style="position: relative; z-index: 5;">
      <div style="margin-bottom: 2rem;">
        <span
          style="border: 1px solid rgba(255,255,255,0.2); padding: 5px 15px; border-radius: 20px; font-size: 0.9rem;"
          >100% Satisfaction Guarantee</span
        >
      </div>

      <h2
        style="color: white; font-size: clamp(2rem, 4vw, 3rem); font-weight: 800; margin-bottom: 1.5rem; line-height: 1.2;"
      >
        Your facility reflects your brand.<br />
        <span class="text-orange">Partner with the professionals.</span>
      </h2>

      <p
        style="color: white; margin-bottom: 3rem; font-size: 1.2rem; opacity: 0.9; max-width: 700px; margin-left: auto; margin-right: auto;"
      >
        Request a complimentary site walkthrough and custom proposal today.
      </p>

      <div
        style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;"
      >
        <a
          href="/contact"
          class="hero-btn"
          style="width: auto; padding: 1rem 3rem; display: flex; align-items: center; gap: 0.5rem; text-decoration: none;"
        >
          <i class="fas fa-file-signature"></i> Request Proposal
        </a>
        <a
          href="tel:4075550123"
          style="padding: 1rem 3rem; border: 1px solid rgba(255,255,255,0.3); border-radius: 10px; color: white; text-decoration: none; font-weight: 600; display: flex; align-items: center; gap: 0.5rem; transition: all 0.2s;"
          onmouseover="this.style.borderColor='white'; this.style.background='rgba(255,255,255,0.05)'"
          onmouseout="this.style.borderColor='rgba(255,255,255,0.3)'; this.style.background='transparent'"
        >
          <i class="fas fa-phone"></i> (407) 555-0123
        </a>
      </div>

      <p style="margin-top: 3rem; font-size: 0.9rem; opacity: 0.5;">
        Serving commercial clients in Orlando, Kissimmee, Sanford, Winter Park,
        Lake Mary and surrounding areas.
      </p>
    </div>
  </section>
</BaseLayout>
