---
import BaseLayout from "../layouts/BaseLayout.astro";
import "@fortawesome/fontawesome-free/css/all.min.css";
import "../styles/portfolio.css";
import TabsNavegation from "../components/TabsNavegation.jsx";
import SEOHead from "../components/SEOHead.jsx";

const pageTitle = "Project Portfolio | Restoration & Remodeling Projects in Florida";
const pageDescription = "See before/after results for water & fire restoration, mold remediation, and kitchen/bath/home remodels across Florida.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="portfolio"
    service="portfolio"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone={"+1-786-602-2217"}
    slot="head"
  />
  <!-- Section One -->

  <section class="projects-section">
    <div class="projects-containerPort">
      <div class="project-frame image-one">
        <img
          src="https://images.unsplash.com/photo-1586023492125-27b2c045efd7?w=500&q=80"
          alt="Interior de una sala de estar moderna con un sill칩n"
          class="project-photo"
        />
      </div>

      <div class="project-frame image-two">
