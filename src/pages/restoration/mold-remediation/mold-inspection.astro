---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import UnifiedServiceTemplate from "../../../components/restoration/templates/UnifiedServiceTemplate.astro";
import SEOHead from "../../../components/SEOHead.jsx";
import SEOCityLinks from "../../../components/SEOCityLinks.jsx";
import { subserviceHubLinks } from "../../../data/seo-interlinking.js";
import { restorationGroups } from "../../../data/restoration.js";

// Find mold-inspection subservice data
const moldGroup = restorationGroups.find(g => g.slug === 'mold-remediation');
const moldInspectionSub = moldGroup?.subservices.find(s => s.slug === 'mold-inspection');

const pageData = {
  group: {
    slug: "mold-remediation",
    name: "Mold Remediation",
    template: "mold",
    description: "Professional mold inspection, testing, and removal services"
  },
  sub: moldInspectionSub || {
    slug: "mold-inspection",
    title: "Mold Inspection",
    short: "Professional mold testing and inspection",
    nombre: "Mold Inspection",
    categoria: "restoration"
  }
};

const pageTitle = "Florida Mold Inspection | Certified Testing & Air Quality Analysis";
const pageDescription = "Professional mold inspection services in Florida. Certified inspectors, advanced testing, moisture detection, and detailed reports. Serving Jupiter, Clearwater, Naples & more. 24/7 response.";

// Get city links for this sub-hub
const cityLinks = subserviceHubLinks['/restoration/mold-remediation/mold-inspection/'];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="restoration"
    service="mold-remediation"
    subservice="mold-inspection"
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone="+1-786-602-2217"
    slot="head"
  />

  <UnifiedServiceTemplate group={pageData.group} sub={pageData.sub} />

  {cityLinks && cityLinks.length > 0 && (
    <SEOCityLinks
      links={cityLinks}
      title="Florida Mold Inspection - Cities We Serve"
      client:load
    />
  )}
</BaseLayout>
