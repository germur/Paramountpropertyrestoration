---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import UnifiedServiceTemplate from "../../../components/restoration/templates/UnifiedServiceTemplate.astro";
import SEOHead from "../../../components/SEOHead.jsx";
import SEOCityLinks from "../../../components/SEOCityLinks.jsx";
import { subserviceHubLinks } from "../../../data/seo-interlinking.js";
import { restorationGroups } from "../../../data/restoration.js";

// Find mold-testing subservice data
const moldGroup = restorationGroups.find(g => g.slug === 'mold-remediation');
const moldTestingSub = moldGroup?.subservices.find(s => s.slug === 'mold-testing');

const pageData = {
  group: {
    slug: "mold-remediation",
    name: "Mold Remediation",
    template: "mold",
    description: "Professional mold inspection, testing, and removal services"
  },
  sub: moldTestingSub || {
    slug: "mold-testing",
    title: "Mold Testing",
    short: "Laboratory-grade mold testing services",
    nombre: "Mold Testing & Air Quality",
    categoria: "restoration"
  }
};

const pageTitle = "Florida Mold Testing | Lab Analysis & Air Quality Testing";
const pageDescription = "Professional mold testing in Florida with certified lab results. Air sampling, surface testing, moisture analysis. Expert service in Lakeland, Pensacola, Naples & more. 24/7 available.";

// Get city links for this sub-hub
const cityLinks = subserviceHubLinks['/restoration/mold-remediation/mold-testing/'];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="restoration"
    service="mold-remediation"
    subservice="mold-testing"
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone="+1-786-602-2217"
    slot="head"
  />

  <UnifiedServiceTemplate group={pageData.group} sub={pageData.sub} />

  {cityLinks && cityLinks.length > 0 && (
    <SEOCityLinks
      links={cityLinks}
      title="Florida Mold Testing - Cities We Serve"
      client:load
    />
  )}
</BaseLayout>
