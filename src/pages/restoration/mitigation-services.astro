---
import BaseLayout from "../../layouts/BaseLayout.astro";
import UnifiedTemplate from "../../components/restoration/templates/UnifiedTemplate.astro";
import { restorationGroups } from "../../data/restoration.js";

// Encontrar el grupo de mitigation-services
const group = restorationGroups.find(g => g.slug === "mitigation-services");

// Crear un subservicio genérico para la página principal del grupo
const sub = {
  slug: "mitigation-services",
  title: "Mitigation Services",
  short: "Professional damage mitigation services",
  nombre: "Mitigation Services",
  categoria: "restoration",
  hero: {
    title: "Professional Mitigation Services in Florida",
    description: "Comprehensive damage mitigation services to prevent and minimize property damage from water, fire, mold, and storms. Fast response and expert prevention solutions.",
    cta: "Get Mitigation Services",
    icons: ["🛡️", "🚨", "🛠️"]
  },
  seo: {
    title: "Mitigation Services in Florida | Water, Fire, Mold & Storm Prevention",
    description: "Florida mitigation services to limit property damage from water, fire, mold, and storms. Fast response & prevention solutions. Call today for inspection."
  }
};
---

<BaseLayout
  title={sub.seo.title}
  description={sub.seo.description}
>
  <UnifiedTemplate group={group} sub={sub} />
</BaseLayout>