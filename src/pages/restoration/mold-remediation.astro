---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MoldTemplate from "../../components/restoration/templates/MoldTemplate.astro";
import SEOCityLinks from "../../components/SEOCityLinks.jsx";
import { hubToGityLinks } from "../../data/seo-interlinking.js";
import "../../styles/pages/mold-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import SEOHead from "../../components/SEOHead.jsx";
import { getFAQs } from "../../data/faqs.js";

// Page data configuration (hub sin ciudad)
const pageData = {
  group: {
    slug: "mold-remediation",
    name: "Mold Remediation",
    template: "mold",
    description: "Professional mold inspection, testing, and removal services",
  },
  sub: null,
};

// SEO básico requerido por BaseLayout y SEOHead
const pageTitle =
  "Florida Certified Mold Testing & Inspection | DBPR License & Claim Support";
const pageDescription =
  "24/7 Florida Mold Testing by DBPR Licensed Assessor. We provide expert reports & claim documentation needed for your insurance company. Immediate response. Call (786) 602-2217.";

// Preguntas para FAQ Schema (FAQPage JSON-LD)
// Preguntas para FAQ Schema (FAQPage JSON-LD) - Generado dinámicamente
const questions = getFAQs("mold-remediation");
const faqQuestions = questions.map((q) => ({
  question: q.question,
  answer: q.answer,
}));
---

<BaseLayout title={pageTitle} description={pageDescription}>
  {/* SEOHead genera title, description, canonical, OG/Twitter y JSON-LD */}
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="restoration"
    service="mold-remediation"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone="+1-786-602-2217"
    faqQuestions={faqQuestions}
    slot="head"
  />

  <MoldTemplate group={pageData.group} sub={pageData.sub} />

  <SEOCityLinks
    links={hubToGityLinks["/restoration/mold-remediation/"]}
    title="Florida Mold Services - Cities We Serve"
    client:load
  />
</BaseLayout>
