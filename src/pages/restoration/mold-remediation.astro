  <meta name="twitter:description" content={seoConfig.description} slot="head" />

  <!-- ELIMINADO: Breadcrumbs duplicados - BaseLayout los genera automáticamente -->
  
  <MoldTemplate group={pageData.group} sub={pageData.sub} />
