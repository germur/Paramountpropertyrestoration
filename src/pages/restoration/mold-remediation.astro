---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MoldTemplate from "../../components/restoration/templates/MoldTemplate.astro";
import "../../styles/pages/mold-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";

// Page data configuration
const pageData = {
  group: {
    slug: "mold-remediation",
    name: "Mold Remediation",
    template: 'mold',
    description: "Professional mold inspection, testing, and removal services"
  },
  sub: {
    slug: "mold-remediation",
    title: 'Mold Remediation',
    nombre: "Mold Remediation",
    template: "mold",
    short: 'Professional mold remediation experts in Florida. Safe removal of black mold with testing, treatment & prevention.',
    categoria: "restoration"
  }
};

// SEO configuration
const seoConfig = {
  title: "Mold Remediation in Florida | Black Mold Removal & Testing",
  description: "Certified mold remediation experts in Florida. Safe removal of black mold with testing, treatment & prevention. Protect your home & health—request inspection today.",
  canonical: "https://paramountpropertyrestoration.com/restoration/mold-remediation",
  keywords: "mold remediation Florida, black mold removal, mold testing, mold inspection, toxic mold removal, mold cleanup Florida, certified mold removal, mold prevention Florida"
};
---

<BaseLayout
  title={seoConfig.title}
  description={seoConfig.description}
>
  <!-- Enhanced Schema.org for Mold Remediation -->
