---
import BaseLayout from "../../layouts/BaseLayout.astro";
import MoldTemplate from "../../components/restoration/templates/MoldTemplate.astro";
import "../../styles/pages/mold-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import SEOHead from "../../components/SEOHead.jsx";

// Page data configuration (hub sin ciudad)
const pageData = {
  group: {
    slug: "mold-remediation",
    name: "Mold Remediation",
    template: "mold",
    description: "Professional mold inspection, testing, and removal services"
  },
  sub: null
};

// SEO básico requerido por BaseLayout y SEOHead
const pageTitle = "Mold Remediation in Florida | Black Mold Removal & Testing";
const pageDescription = "Certified mold remediation experts in Florida. Safe removal of black mold with testing, treatment & prevention. Protect your home & health—request inspection today.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  {/* SEOHead genera title, description, canonical, OG/Twitter y JSON-LD */}
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="restoration"
    service="mold-remediation"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone="+1-786-602-2217"
    slot="head"
  />

  <MoldTemplate group={pageData.group} sub={pageData.sub} />
</BaseLayout>