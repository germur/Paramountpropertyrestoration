---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import UnifiedServiceTemplate from "../../../components/restoration/templates/UnifiedServiceTemplate.astro";
import SEOHead from "../../../components/SEOHead.jsx";
import SEOCityLinks from "../../../components/SEOCityLinks.jsx";
import { subserviceHubLinks } from "../../../data/seo-interlinking.js";
import { restorationGroups } from "../../../data/restoration.js";

// Find flood-damage subservice data
const waterGroup = restorationGroups.find(g => g.slug === 'water-damage');
const floodDamageSub = waterGroup?.subservices.find(s => s.slug === 'flood-damage');

const pageData = {
  group: {
    slug: "water-damage",
    name: "Water Damage Restoration",
    template: "water",
    description: "Emergency water damage restoration and cleanup services"
  },
  sub: floodDamageSub || {
    slug: "flood-damage",
    title: "Flood Damage",
    short: "Flood damage cleanup and restoration",
    nombre: "Flood Damage Cleanup",
    categoria: "restoration"
  }
};

const pageTitle = "Florida Flood Damage Restoration | Expert Cleanup & Drying";
const pageDescription = "Professional flood damage restoration in Florida. Complete cleanup, water extraction, structural drying, mold prevention. Ocala, Naples, Palm Coast & more. 24/7 emergency response.";

// Get city links for this sub-hub
const cityLinks = subserviceHubLinks['/restoration/water-damage/flood-damage/'];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="restoration"
    service="water-damage"
    subservice="flood-damage"
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone="+1-786-602-2217"
    slot="head"
  />

  <UnifiedServiceTemplate group={pageData.group} sub={pageData.sub} />

  {cityLinks && cityLinks.length > 0 && (
    <SEOCityLinks
      links={cityLinks}
      title="Florida Flood Damage Restoration - Cities We Serve"
      client:load
    />
  )}
</BaseLayout>
