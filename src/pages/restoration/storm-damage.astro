  <!-- SEO Enhancement -->
  <link rel="canonical" href={seoConfig.canonical} slot="head" />
  <meta name="keywords" content={seoConfig.keywords} slot="head" />
  <meta name="robots" content="index, follow, max-image-preview:large" slot="head" />
  <meta name="geo.region" content="US-FL" slot="head" />
  <meta name="geo.placename" content="Florida" slot="head" />
  
  <!-- Emergency & Weather specific meta tags -->
  <meta property="article:section" content="Emergency Services" slot="head" />
  <meta name="service.category" content="Storm Damage Restoration" slot="head" />
  <meta name="service.type" content="Emergency Restoration" slot="head" />
  <meta name="emergency.type" content="Storm Response" slot="head" />
  <meta name="weather.related" content="Hurricane, Wind, Storm" slot="head" />
  
  <!-- Enhanced Open Graph -->
  <meta property="og:title" content={seoConfig.title} slot="head" />
