---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/pages/storm-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../components/AcordeonServices";
import RestorationCTA from "../../components/RestorationCTA";
import WhyChooseUs from "../../components/WhyChooseUs";
import ServiceHighlights from "../../components/ServiceHighlights";
---

<BaseLayout
  title="Storm Damage Restoration in Florida | Hurricane & Roof Repair"
  description="Florida storm damage restoration experts. Emergency response for hurricanes, roof damage, and debris removal. Serving Orlando, Miami, Tampa & beyond. Call 24/7."
>
  <!-- Hero -->
  <section class="hero-sectionKitchen">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Storm Damage Restoration Services in Florida</h1>
      <p>
        Our Florida storm restoration teams provide 24/7 emergency response for
        roof damage, flooding, and debris removal. From temporary tarps to full
        repairs, we restore homes and businesses quickly and safely.
      </p>
      <a href="/contact" class="cta-button">Repair Storm Damage Today →</a>
    </div>
  </section>

  <!-- Service Icons -->
  <section>
    <div class="services-grid">
      <div class="service-item">
        <i class="fas fa-wind"></i>
        <h3>Wind Damage</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-cloud-showers-heavy"></i>
        <h3>Hurricane Damage</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-tree"></i>
        <h3>Storm Debris Removal</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-tools"></i>
        <h3>Emergency Storm Repair</h3>
      </div>
    </div>
  </section>

  <!-- Solutions Cards -->
  <section class="solutions-section">
    <h2 class="solutions-title">Comprehensive Storm Damage Solutions</h2>
    <div class="solutions-grid">
      <!-- Card 1 -->

      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/HurricaneDamage.jpg"
            alt="Home impacted by hurricane rain and wind"
          />
        </div>
        <div class="card-content">
          <h3>Hurricane Damage</h3>
          <p>
            Full-service response for hurricane impact: stabilization, water
            mitigation, and structural repairs.
          </p>
          <a href="/contact" class="card-cta">Hurricane Recovery</a>
        </div>
      </div>

      <!-- Card 2 -->

      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/WindDamage.jpg"
            alt="Shingles and siding damaged by strong winds"
          />
        </div>
        <div class="card-content">
          <h3>Wind Damage</h3>
          <p>
            Repair missing shingles, damaged siding, and broken windows to
            restore weather protection.
          </p>
          <a href="/contact" class="card-cta">Fix Wind Damage</a>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/StormDebrisRemoval.jpg"
            alt="Crew removing fallen branches and exterior debris"
          />
        </div>
        <div class="card-content">
          <h3>Storm Debris Removal</h3>
          <p>
            Safe removal of fallen trees, branches, and exterior debris to clear
            access and prevent hazards.
          </p>
          <a href="/contact" class="card-cta">Schedule Debris Pickup</a>
        </div>
      </div>

      <!-- Card 5 -->
      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/EmergencyStormRepair.jpg"
            alt="Team performing urgent exterior repairs after a storm"
          />
        </div>
        <div class="card-content">
          <h3>Emergency Storm Repair</h3>
          <p>
            Fast temporary and permanent repairs to roofs, exteriors, and
            interiors after severe weather.
          </p>
          <a href="/contact" class="card-cta">Get Emergency Repairs</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Steps -->
  <section class="steps-section">
    <h2 class="steps-title">How It Works</h2>
    <div class="steps-container">
      <div class="step-item" data-step="1">
        <div class="step-icon"><i class="fas fa-phone-alt"></i></div>
        <h3>Emergency Call</h3>
        <p>Damage assessment & safety check</p>
      </div>

      <div class="step-item" data-step="2">
        <div class="step-icon"><i class="fas fa-shield-alt"></i></div>
        <h3>Secure & Mitigate</h3>
        <p>Roof tarps, board-up & water stop</p>
      </div>

      <div class="step-item" data-step="3">
        <div class="step-icon"><i class="fas fa-broom"></i></div>
        <h3>Clean & Remove</h3>
        <p>Debris removal & drying as needed</p>
      </div>

      <div class="step-item" data-step="4">
        <div class="step-icon"><i class="fas fa-tools"></i></div>
        <h3>Repair & Restore</h3>
        <p>Exterior/interior repairs & finishes</p>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <WhyChooseUs
    client:load
    title="Why Choose Us"
    items={[
      "24/7 storm response teams across Florida",
      "Emergency tarping, board-up, and roof repair",
      "From cleanup to rebuild—we handle it all",
      "Support with insurance paperwork",
      "Trusted by Florida homeowners after every storm season",
    ]}
  />

  <!-- Service Highlights -->
  <ServiceHighlights
    client:load
    title="Service Highlights"
    highlights={[
      "Hurricane & tropical storm recovery",
      "Roof repair & replacement",
      "Water extraction & drying",
      "Fallen tree & debris removal",
      "Emergency property board-up",
    ]}
  />
  <!-- FAQ -->
  <section>
    <FAQ client:load category="storm" title="Storm Damage FAQs" />
  </section>

  <!-- Final CTA -->
  <RestorationCTA
    client:load
    title="Don't wait after a storm—protect your home now."
    subtitle="Call today for 24/7 emergency storm damage restoration in Florida."
    buttonText="Repair Storm Damage Today"
    buttonLink="/contact"
  />
</BaseLayout>
