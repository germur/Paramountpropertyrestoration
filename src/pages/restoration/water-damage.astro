---
import BaseLayout from "../../layouts/BaseLayout.astro";
import WaterTemplate from "../../components/restoration/templates/WaterTemplate.astro";
import "../../styles/pages/water-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";

// Page data configuration
const pageData = {
  group: {
    slug: "water-damage",
    name: "Water Damage Restoration", 
    template: "water",
    description: "Emergency water damage restoration and cleanup services"
  },
  sub: {
    slug: "water-damage",
    title: "Water Damage Restoration",
    nombre: "Water Damage",
    template: "water",
    short: "Emergency water damage restoration and cleanup services",
    categoria: "restoration"
  }
};

// SEO configuration
const seoConfig = {
  title: "Water Damage Restoration in Florida | 24/7 Emergency Service",
  description: "Florida water damage restoration experts—fast extraction, drying, and repairs. Serving Orlando, Miami, Tampa & beyond with 24/7 emergency response and free assessments.",
  canonical: "https://paramountpropertyrestoration.com/restoration/water-damage",
  keywords: "water damage restoration Florida, emergency water extraction, flood damage cleanup, burst pipe repair, water damage drying, sewage cleanup Florida, 24/7 water damage service"
};
---

<BaseLayout
  title={seoConfig.title}
  description={seoConfig.description}
>
  <!-- Enhanced Schema.org for Water Damage Restoration -->
