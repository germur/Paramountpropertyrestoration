---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FireTemplate from "../../components/restoration/templates/FireTemplate.astro";
import Breadcrumbs from "../../components/Breadcrumbs.jsx";
import "../../styles/pages/fire-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";

// Datos para la p√°gina principal de fire damage
const group = {
  slug: "fire-damage",
  name: "Fire Damage Restoration",
  template: "fire",
  description: "Complete fire and smoke damage restoration services"
};

const sub = {
  slug: "fire-damage",
  title: "Fire Damage Restoration",
  nombre: "Fire Damage",
  template: "fire",
  short: "Complete fire and smoke damage restoration services",
  categoria: "restoration"
};
---

<BaseLayout
  title="Fire Damage Restoration in Florida | Smoke & Soot Cleanup"
  description="Florida fire damage restoration experts. 24/7 cleanup for smoke, soot, and structural repair. Serving Orlando, Miami, Tampa & more. Request a free inspection today."
>
  <!-- Schema.org for Service -->
  <script type="application/ld+json" slot="head">
    {
      "@context": "https://schema.org",
      "@type": "Service",
      "name": "Fire Damage Restoration in Florida",
      "description": "24/7 emergency fire damage restoration services across Florida. Smoke, soot cleanup and structural repairs.",
      "provider": {
        "@type": "LocalBusiness",
        "name": "Paramount Property Restoration",
        "telephone": "+1-786-602-2217"
      },
      "areaServed": {
        "@type": "State",
        "name": "Florida"
      },
      "serviceType": "Emergency Fire Damage Restoration",
      "url": "https://paramountpropertyrestoration.com/restoration/fire-damage"
    }
  </script>
  
  <!-- Canonical URL -->
  <link rel="canonical" href="https://paramountpropertyrestoration.com/restoration/fire-damage" slot="head" />
  
  <div class="container">
    <Breadcrumbs client:load crumbs={[
      { label: 'Home', href: '/' },
      { label: 'Restoration', href: '/restoration' },
      { label: 'Fire Damage', href: '/restoration/fire-damage' }
    ]} />
  </div>
  <FireTemplate group={group} sub={sub} />
</BaseLayout>