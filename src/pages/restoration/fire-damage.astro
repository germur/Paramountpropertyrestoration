    title="Regional Coverage"
    internalLinks={[
      { text: "Fire Damage in Orlando", url: "/restoration/fire-damage/orlando" },
      { text: "Smoke Cleanup Miami", url: "/restoration/fire-damage/miami" },
      { text: "Soot Removal Tampa", url: "/restoration/fire-damage/tampa" }
    ]}
  />

