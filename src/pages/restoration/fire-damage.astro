---
import { restorationGroups } from "../../data/restoration.js";
import UnifiedTemplate from "../../components/restoration/templates/UnifiedTemplate.astro";

// Find the fire group object by template
const group = restorationGroups.find(g => g.template === "fire");

// Create sub object with fire-damage properties
const sub = {
  slug: "fire-damage",
  title: group?.title || "Fire Damage Restoration",
  nombre: group?.nombre || "Fire Damage",
  template: group?.template || "fire"
};
---

<UnifiedTemplate group={group} sub={sub} />