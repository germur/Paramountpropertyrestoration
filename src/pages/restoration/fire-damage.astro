---
import BaseLayout from "../../layouts/BaseLayout.astro";
import FireTemplate from "../../components/restoration/templates/FireTemplate.astro";
import "../../styles/pages/fire-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import SEOHead from "../../components/SEOHead.jsx";

// Datos para la página de fire damage (hub sin ciudad)
const pageData = {
  group: {
    slug: "fire-damage",
    name: "Fire Damage Restoration",
    template: "fire",
    description: "Complete fire and smoke damage restoration services"
  },
  sub: null
};
// Título/Descripción requeridos por BaseLayout y SEOHead (tipados en tu proyecto)
const pageTitle = "Fire Damage Restoration in Florida | Smoke & Soot Cleanup";
const pageDescription = "Florida fire damage restoration experts. 24/7 cleanup for smoke, soot, and structural repair. Serving Orlando, Miami, Tampa & more. Request a free inspection today.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  {/* SEOHead genera title, description, canonical, OG/Twitter y JSON-LD */}
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="restoration"
    service="fire-damage"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone="+1-786-602-2217"
    slot="head"
  />

  <FireTemplate group={pageData.group} sub={pageData.sub} />
</BaseLayout>