---
import BaseLayout from "../../layouts/BaseLayout.astro";
import "../../styles/pages/fire-damage.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
import FAQ from "../../components/AcordeonServices";
import RestorationCTA from "../../components/RestorationCTA";
import WhyChooseUs from "../../components/WhyChooseUs";
import ServiceHighlights from "../../components/ServiceHighlights";
import RegionalCoverage from "../../components/RegionalCoverage";
---

<BaseLayout
  title="Fire Damage Restoration in Florida | Smoke & Soot Cleanup"
  description="Florida fire damage restoration experts. 24/7 cleanup for smoke, soot, and structural repair. Serving Orlando, Miami, Tampa & more. Request a free inspection today."
>
  <!-- Section One -->
  <section class="hero-sectionKitchen">
    <div class="hero-overlay"></div>
    <div class="hero-content">
      <h1>Fire Damage Restoration Services in Florida</h1>
      <p>
        We provide 24/7 fire and smoke damage restoration across Florida. From
        emergency board-up to soot removal and full repairs, our team restores
        homes and businesses to safe, pre-loss condition.
      </p>
      <a href="/contact" class="cta-button">Clean Up After Fire →</a>
    </div>
  </section>

  <!-- Section Two -->
  <section>
    <div class="services-grid">
      <div class="service-item">
        <i class="fas fa-smog"></i>
        <h3>Smoke Damage</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-broom"></i>
        <h3>Soot Cleanup</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-tools"></i>
        <h3>Fire Damage Repair</h3>
      </div>

      <div class="service-item">
        <i class="fas fa-ambulance"></i>
        <h3>Emergency Fire Response</h3>
      </div>
    </div>
  </section>

  <!-- Section Three - Solutions Cards -->
  <section class="solutions-section">
    <h2 class="solutions-title">Comprehensive Fire Damage Solutions</h2>
    <div class="solutions-grid">
      <!-- Card 1 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/SmokeDamage.jpg" alt="Smoke Damage Restoration" />
        </div>
        <div class="card-content">
          <h3>Smoke Damage</h3>
          <p>
            Remove harmful smoke residue, restore air quality, and protect your
            property from long-term damage caused by fire.
          </p>
          <a href="/contact" class="card-cta">Request Smoke Cleanup</a>
        </div>
      </div>

      <!-- Card 2 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/SootCleanup.jpg" alt="Soot Cleanup Service" />
        </div>
        <div class="card-content">
          <h3>Soot Cleanup</h3>
          <p>
            Deep clean and remove stubborn soot stains from walls, ceilings, and
            surfaces, restoring your property’s appearance.
          </p>
          <a href="/contact" class="card-cta">Book Soot Removal</a>
        </div>
      </div>

      <!-- Card 3 -->
      <div class="solution-card">
        <div class="card-image">
          <img src="/images/FireDamageRepair.jpg" alt="Fire Damage Repair" />
        </div>
        <div class="card-content">
          <h3>Fire Damage Repair</h3>
          <p>
            Repair structural damage, replace destroyed materials, and rebuild
            affected areas to restore safety and comfort.
          </p>
          <a href="/contact" class="card-cta">Start Repairs Today</a>
        </div>
      </div>

      <!-- Card 4 -->
      <div class="solution-card">
        <div class="card-image">
          <img
            src="/images/EmergencyFireResponse.jpg"
            alt="Emergency Fire Response"
          />
        </div>
        <div class="card-content">
          <h3>Emergency Fire Response</h3>
          <p>
            24/7 rapid response to fire emergencies, minimizing damage and
            beginning restoration work immediately on arrival.
          </p>
          <a href="/contact" class="card-cta">Get Emergency Help</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Steps -->

  <section class="steps-section">
    <h2 class="steps-title">How It Works</h2>
    <div class="steps-container">
      <!-- Step 1 -->
      <div class="step-item" data-step="1">
        <div class="step-icon">
          <i class="fas fa-phone-alt"></i>
        </div>
        <h3>Emergency Response & Board-Up</h3>
        <p>Secure the property immediately after the fire</p>
      </div>

      <!-- Step 2 -->
      <div class="step-item" data-step="2">
        <div class="step-icon">
          <i class="fas fa-cube"></i>
        </div>
        <h3>Soot & Smoke Removal</h3>
        <p>Clean affected areas with advanced tools and techniques</p>
      </div>

      <!-- Step 3 -->
      <div class="step-item" data-step="3">
        <div class="step-icon">
          <i class="fas fa-tools"></i>
        </div>
        <h3>Odor Treatment</h3>
        <p>Deodorize air, walls, and belongings for a safe living space</p>
      </div>

      <!-- Step 4 -->
      <div class="step-item" data-step="4">
        <div class="step-icon">
          <i class="fas fa-check"></i>
        </div>
        <h3>Repairs & Restoration</h3>
        <p>Rebuild damaged structures and restore finishes</p>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <WhyChooseUs
    client:load
    title="Why Choose Us"
    items={[
      "24/7 fire and smoke restoration in Florida",
      "Local teams for fast dispatch",
      "Complete service—from cleanup to rebuild",
      "We assist with insurance paperwork",
      "Trusted by Florida homeowners & businesses",
    ]}
  />

  <!-- Service Highlights -->
  <ServiceHighlights
    client:load
    title="Service Highlights"
    highlights={[
      "Smoke odor removal",
      "Soot cleaning & disinfection",
      "HVAC system cleaning",
      "Emergency property board-up",
      "Fire + water damage mitigation",
    ]}
  />

  <!-- Regional Coverage -->
  <RegionalCoverage
