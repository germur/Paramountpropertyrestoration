            margin: 0;
            padding: 0;
        }
        .container { 
            max-width: 1100px; 
        }
        
        /* Navy background matching global styles */
        .primary-bg { 
            background: linear-gradient(135deg, #1E293B 0%, #0F172A 100%);
        }
        
        /* Brand accent blue for CTAs */
        .accent-cta { 
            background: #35c3e9;
            box-shadow: 0 10px 30px rgba(53, 195, 233, 0.4);
            transition: all 0.3s ease;
        }
        .accent-cta:hover { 
            background: #2a9fd1;
            box-shadow: 0 15px 40px rgba(53, 195, 233, 0.5);
            transform: translateY(-2px);
        }
        
        .shadow-cta { 
            box-shadow: 0 10px 30px rgba(53, 195, 233, 0.4); 
        }
        
        /* Button styling matching global */
        .btn-blue {
            background: #35c3e9;
            transition: all 0.3s ease;
        }
        .btn-blue:hover {
            background: #2a9fd1;
            box-shadow: 0 8px 20px rgba(53, 195, 233, 0.4);
            transform: translateY(-2px);
        }
        
        /* Accent color borders and text */
        .border-accent {
            border-color: #35c3e9 !important;
        }
        .text-accent {
            color: #35c3e9 !important;
        }
        .bg-accent-light {
            background-color: #e8f4fd;
        }
        
        /* Navy accents */
        .border-navy {
            border-color: #1E293B !important;
        }
        .text-navy {
            color: #1E293B !important;
        }
        .bg-navy-light {
            background-color: #f1f5f9;
        }
        
        /* Hero section with animated background */
        .animated-hero-section {
            position: relative;
            overflow: hidden;
            margin: 0;
            padding: 80px 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        
        /* Content layer */
        .animated-hero-section .hero-content-wrapper {
            position: relative;
            z-index: 10;
            width: 100%;
        }
        
        /* All cards MUST be fully opaque and visible */
        .animated-hero-section .hero-card {
            background-color: white !important;
            position: relative;
            z-index: 20;
        }
        
        /* Ensure content sections appear above hero */
        section:not(.animated-hero-section) {
            position: relative;
            z-index: 10;
            background: white;
        }
        
        .sticky-footer-cta {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            z-index: 50;
            display: none;
            animation: slideUp 0.3s ease-out;
        }
        @keyframes slideUp {
            from {
                transform: translateY(100%);
            }
            to {
                transform: translateY(0);
            }
        }
        @media (max-width: 768px) {
            .sticky-footer-cta {
                display: block;
            }
            .hero-form-container {
                margin-top: 1rem;
            }
        }
        .dbpr-seal { 
            border: 2px solid #35c3e9;
            background: rgba(53, 195, 233, 0.1);
