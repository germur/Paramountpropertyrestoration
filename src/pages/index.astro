    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.875rem;
  }

  .service-image {
    width: 100%;
    height: 160px;
    overflow: hidden;
    border-radius: 6px;
    margin: 1rem 0;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
  }

  .service-card:hover .service-image img {
    transform: scale(1.05);
  }

  .service-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .service-tags span {
    background: var(--color-light);
    color: var(--color-gray);
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.875rem;
  }

  .service-tag {
    background: var(--color-blue);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 16px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .cta-container {
    text-align: center;
    margin-top: 3rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.7);
    border-radius: var(--radius);
    backdrop-filter: blur(5px);
  }

  .response-time {
    margin-top: 1rem;
    color: var(--color-gray);
    font-size: 0.875rem;
  }

  /* REGIONS */
  .minimal-services-section {
    padding: 4rem 0;
    background: white;
  }

  .minimal-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .regions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .region-column {
    background: var(--color-light);
    padding: 2rem;
    border-radius: var(--radius);
  }

  .region-title {
    color: var(--color-navy);
    font-size: 1.25rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-blue);
  }

  .city-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .city-links a {
    color: var(--color-gray);
    text-decoration: none;
    padding: 0.5rem;
    border-radius: 4px;
    transition: var(--transition);
  }

  .city-links a:hover {
    background: white;
    color: var(--color-blue);
    transform: translateX(4px);
  }

  .emergency-footer {
    text-align: center;
    margin-top: 2rem;
    padding: 2rem;
    background: var(--color-light);
    border-radius: var(--radius);
  }

  .emergency-phone {
    color: var(--color-blue);
    font-weight: 600;
    text-decoration: none;
  }

  /* SERVICE AREAS */
  .service-areas-section {
    padding: 4rem 0;
    background: var(--color-light);
  }

  /* BLOG */
  .blog-section {
    padding: 4rem 0;
    background: white;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .blog-card {
    background: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    overflow: hidden;
    transition: var(--transition);
  }

  .blog-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(30, 41, 59, 0.12);
  }

  .blog-card-content {
    padding: 1.5rem;
  }

  .blog-card h3 a {
    color: var(--color-navy);
    text-decoration: none;
  }

  .blog-card h3 a:hover {
    color: var(--color-blue);
  }

  .blog-meta {
    display: flex;
    gap: 1rem;
    font-size: 0.875rem;
    color: var(--color-gray);
    margin-bottom: 1rem;
  }

  .read-more {
    color: var(--color-blue);
    text-decoration: none;
    font-weight: 600;
  }

  .read-more:hover {
    color: var(--color-blue-hover);
  }

  /* UTILIDADES */
  .text-center { text-align: center; }
  .mb-12 { margin-bottom: 3rem; }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .hero-cta-dual {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-action, .cta-secondary {
      width: 100%;
      max-width: 280px;
    }
    
    .services-grid, .regions-grid {
      grid-template-columns: 1fr;
