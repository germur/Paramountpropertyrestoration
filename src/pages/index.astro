  .emergency-btn-banner {
    background: white;
    color: var(--emergency-color);
    padding: 0.5rem 1rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: bold;
    transition: var(--transition);
    white-space: nowrap;
    font-size: 0.9rem;
  }

  .emergency-btn-banner:hover {
