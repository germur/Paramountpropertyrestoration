    display: block;
  }

  .service-card h3 {
    margin-bottom: 0.75rem;
    color: var(--color-navy);
  }

  .service-card p {
    color: var(--color-gray);
    margin-bottom: 1rem;
  }

  .service-number {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--color-blue);
    color: white;
    width: 32px;
    height: 32px;
