    background: transparent;
    color: var(--color-navy);
    border: 2px solid var(--color-navy);
  }

  .btn-outline:hover {
    background: var(--color-navy);
    color: white;
  }

  /* HERO */
  .hero-section {
    position: relative;
    min-height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-image: url("/images/heroContact.webp");
