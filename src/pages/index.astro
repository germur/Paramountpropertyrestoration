---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Steps from "../components/Steps";
import LinkBuildingSection from "../components/linkBuilding.jsx";
import "@fortawesome/fontawesome-free/css/all.min.css";

import SEOHead from "../components/SEOHead.jsx";
import BentoServices from "../components/home/BentoServices.jsx";
const pageTitle =
  "Paramount Property Restoration | Florida Restoration & Remodeling";
const pageDescription =
  "24/7 water, fire, mold & storm restoration. Bathroom, kitchen, and home remodeling across Florida. Free inspection & estimates.";

// Obtener posts destacados del blog
let allPosts: CollectionEntry<"blog">[] = [];
let featuredPosts: CollectionEntry<"blog">[] = [];
try {
  allPosts = await getCollection("blog");
  featuredPosts = allPosts
    .filter((post) => post.data.featured)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
    .slice(0, 3);
} catch (error) {
  console.log("No se pudieron cargar los posts del blog:", error);
}
