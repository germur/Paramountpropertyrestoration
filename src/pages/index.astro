    padding: 2rem;
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--color-navy);
    box-shadow: var(--shadow);
    transition: var(--transition);
    border: 1px solid var(--color-border);
    position: relative;
    overflow: hidden;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(30, 41, 59, 0.12);
    color: var(--color-navy);
  }

  .service-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

  .service-card h3 {
    margin-bottom: 0.75rem;
    color: var(--color-navy);
  }

  .service-card p {
    color: var(--color-gray);
    margin-bottom: 1rem;
  }

  .service-number {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--color-blue);
    color: white;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 0.875rem;
  }

  .service-image {
    width: 100%;
    height: 160px;
    overflow: hidden;
    border-radius: 6px;
    margin: 1rem 0;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition);
