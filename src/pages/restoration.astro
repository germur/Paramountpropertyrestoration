---
// src/pages/restoration.astro
import BaseLayout from "../layouts/BaseLayout.astro";
import SEOHead from "../components/SEOHead.jsx";
// ‚úÖ IMPORTAR TUS COMPONENTES DE CONFIANZA
import TrustBar from "../components/sections/TrustBar.astro";
import Steps from "../components/Steps.jsx";
import SmartFAQ from "../components/SmartFAQ.astro";
import { commonFAQs } from "../data/faqs.js";
import "../styles/services.css";

const pageTitle = "Florida Restoration Services | We Restore Calm After Chaos";
const pageDescription =
    "24/7 Emergency restoration for Water, Fire, Mold & Storm. We handle the insurance, the cleanup, and the rebuilding. 60-minute response time.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <SEOHead
        title={pageTitle}
        description={pageDescription}
        siteUrl="https://paramountpropertyrestoration.com"
        vertical="restoration"
        service="restoration"
        subservice={null}
        city={null}
        addressLocality={null}
        isHub={true}
        businessName="Paramount Property Restoration"
        addressRegion="FL"
        phone={"+1-786-602-2217"}
        slot="head"
    />

    <section
        class="hero-section"
        style="background-image: url('/images/heroRestoration.jpeg');"
    >
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <span class="hero-badge"
                ><i class="fas fa-bolt"></i> 60-Minute Rapid Response</span
            >
            <h1 class="hero-title">We Restore More Than Just Property</h1>
            <p class="hero-subtitle">
                Facing water, fire, or mold damage? We guide you from disaster
                to recovery, handling your insurance claim every step of the
                way.
            </p>
            <div class="hero-actions">
                <a href="tel:+17866022217" class="hero-cta-button primary">
                    <i class="fas fa-phone-alt"></i> (786) 602-2217
                </a>
                <span class="hero-support-text">Live 24/7 Agent</span>
            </div>
        </div>
    </section>

    <TrustBar />

    <section class="tabs-section">
        <div class="container">
            <h2 class="section-heading-center">
                What Emergency Are You Facing?
            </h2>
            <div class="tabs-services">
                <div class="cnt-iconsServices">
                    <a
                        href="/restoration/water-damage"
                        class="tab-button active-tab"
                    >
                        <i class="fas fa-tint"></i> Water
                    </a>
                </div>
                <div class="cnt-iconsServices">
                    <a href="/restoration/fire-damage" class="tab-button">
                        <i class="fas fa-fire"></i> Fire
                    </a>
                </div>
                <div class="cnt-iconsServices">
                    <a href="/restoration/mold-remediation" class="tab-button">
                        <i class="fas fa-bacterium"></i> Mold
                    </a>
                </div>
                <div class="cnt-iconsServices">
                    <a href="/restoration/storm-damage" class="tab-button">
                        <i class="fas fa-wind"></i> Storm
                    </a>
                </div>
            </div>
        </div>
    </section>

    <section class="services-grid-container">
        <div class="services-grid">
            <div class="service-card clean-card">
                <div class="card-image-wrapper">
                    <img
                        src="/images/water-damage.webp"
                        alt="Water Damage Restoration"
                        class="card-image"
                    />
                    <div class="card-badge">Most Common</div>
                </div>
                <div class="card-content">
                    <div class="card-header">
                        <i class="fas fa-tint icon-water"></i>
                        <h2 class="card-title">Water Damage</h2>
                    </div>
                    <p class="card-description">
                        Extraction, drying, and dehumidification. We prevent
                        secondary damage and mold growth.
                    </p>

                    <ul class="card-benefits">
                        <li><i class="fas fa-check"></i> Flood Extraction</li>
                        <li><i class="fas fa-check"></i> Leak Detection</li>
                        <li><i class="fas fa-check"></i> Structural Drying</li>
                    </ul>

                    <div class="card-actions">
                        <a href="/restoration/water-damage" class="btn-text">
                            See Full Service <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="service-card clean-card">
                <div class="card-image-wrapper">
                    <img
                        src="/images/fire-damage.webp"
                        alt="Fire Damage Restoration"
                        class="card-image"
                    />
                </div>
                <div class="card-content">
                    <div class="card-header">
                        <i class="fas fa-fire icon-fire"></i>
                        <h2 class="card-title">Fire & Smoke</h2>
                    </div>
                    <p class="card-description">
                        We eliminate smoke odors, remove soot, and rebuild your
                        property to pre-loss condition.
                    </p>
                    <ul class="card-benefits">
                        <li><i class="fas fa-check"></i> Smoke Cleanup</li>
                        <li><i class="fas fa-check"></i> Soot Removal</li>
                        <li><i class="fas fa-check"></i> Odor Control</li>
                    </ul>
                    <div class="card-actions">
                        <a href="/restoration/fire-damage" class="btn-text">
                            See Full Service <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="service-card clean-card">
                <div class="card-image-wrapper">
                    <img
                        src="/images/mold-damage.webp"
                        alt="Mold Remediation"
                        class="card-image"
                    />
                </div>
                <div class="card-content">
                    <div class="card-header">
                        <i class="fas fa-bacterium icon-mold"></i>
                        <h2 class="card-title">Mold Remediation</h2>
                    </div>
                    <p class="card-description">
                        We identify the source, contain the spread, and safely
                        remove mold to protect your health.
                    </p>
                    <ul class="card-benefits">
                        <li><i class="fas fa-check"></i> Mold Inspection</li>
                        <li><i class="fas fa-check"></i> Safe Removal</li>
                        <li><i class="fas fa-check"></i> Prevention</li>
                    </ul>
                    <div class="card-actions">
                        <a
                            href="/restoration/mold-remediation"
                            class="btn-text"
                        >
                            See Full Service <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="service-card clean-card">
                <div class="card-image-wrapper">
                    <img
                        src="/images/storm-damage.webp"
                        alt="Storm Damage Restoration"
                        class="card-image"
                    />
                </div>
                <div class="card-content">
                    <div class="card-header">
                        <i class="fas fa-wind icon-storm"></i>
                        <h2 class="card-title">Storm Damage</h2>
                    </div>
                    <p class="card-description">
                        From hurricanes to severe storms, we secure your
                        property and repair structural damage.
                    </p>
                    <ul class="card-benefits">
                        <li><i class="fas fa-check"></i> Board-Up Services</li>
                        <li><i class="fas fa-check"></i> Roof Tarping</li>
                        <li><i class="fas fa-check"></i> Debris Removal</li>
                    </ul>
                    <div class="card-actions">
                        <a href="/restoration/storm-damage" class="btn-text">
                            See Full Service <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="process-section">
        <div class="container">
            <div class="text-center mb-12">
                <h2>From Chaos to Calm: Our Process</h2>
                <p>We handle the stress so you don't have to.</p>
            </div>
            <Steps client:visible />
        </div>
    </section>

    <section class="why-us-section bg-light">
        <div class="container">
            <div class="usp-grid">
                <div class="usp-item">
                    <h3>ü§ù Insurance Experts</h3>
                    <p>
                        We speak the language of insurance adjusters to maximize
                        your claim coverage.
                    </p>
                </div>
                <div class="usp-item">
                    <h3>‚ö° Rapid Deployment</h3>
                    <p>
                        Local teams in Miami, Orlando & Tampa ready to dispatch
                        instantly.
                    </p>
                </div>
                <div class="usp-item">
                    <h3>üèóÔ∏è One-Stop Shop</h3>
                    <p>
                        From water extraction to final coat of paint, we do it
                        all.
                    </p>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>

<SmartFAQ questions={commonFAQs} />
