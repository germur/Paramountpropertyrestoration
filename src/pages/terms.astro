const pageTitle = "Terms and Conditions | Paramount Property Restoration";
const pageDescription = "Read the terms governing the use of our website and services, including estimates, warranties, liability limitations, and cookie policy.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <SEOHead
    title={pageTitle}
    description={pageDescription}
    siteUrl="https://paramountpropertyrestoration.com"
    vertical="legal"
    service="terms"
    subservice={null}
    city={null}
    addressLocality={null}
    isHub={true}
    businessName="Paramount Property Restoration"
    addressRegion="FL"
    phone={"+1-786-602-2217"}
    slot="head"
  />

  <section class="container" style="max-width: 900px; margin: 2rem auto; line-height:1.7;">
    <h1>Terms and Conditions</h1>
    <p><em>Last updated: October 14, 2025</em></p>

