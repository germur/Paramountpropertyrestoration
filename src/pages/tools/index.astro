---
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle =
    "Restoration Tools & Calculators | Paramount Property Restoration";
const pageDescription =
    "Free tools and calculators to help you estimate restoration costs, understand insurance coverage, and make informed decisions about your property.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
    <div class="tools-page">
        <section class="hero-section">
            <div class="container">
                <h1>Restoration Tools & Resources</h1>
                <p class="hero-subtitle">
                    Professional-grade tools to help you manage property damage
                    and restoration decisions.
                </p>
            </div>
        </section>

        <section class="tools-grid-section">
            <div class="container">
                <div class="tools-grid">
                    <!-- Mold Calculator Card -->
                    <a
                        href="/tools/mold-testing-cost-calculator"
                        class="tool-card"
                    >
                        <div class="tool-icon">ðŸ§®</div>
                        <div class="tool-content">
                            <h2>Mold Testing Cost Calculator</h2>
                            <p>
                                Get an instant estimate for mold inspection and
                                testing services based on your property size and
                                location.
                            </p>
                            <span class="tool-link">Launch Calculator â†’</span>
                        </div>
                    </a>

                    <!-- Placeholder for future tools -->
                    <div class="tool-card coming-soon">
                        <div class="tool-icon">ðŸ’§</div>
                        <div class="tool-content">
                            <h2>Water Damage Estimator</h2>
                            <p>
                                Coming Soon: Calculate potential water damage
                                restoration costs based on affected area and
                                water category.
                            </p>
                            <span class="tool-status">In Development</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</BaseLayout>

<style>
    .tools-page {
        min-height: 100vh;
        background: #f8fafc;
    }

    .hero-section {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        color: white;
        padding: 5rem 0;
        text-align: center;
    }

    .hero-section h1 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: #e2e8f0;
        max-width: 700px;
        margin: 0 auto;
    }

    .tools-grid-section {
        padding: 4rem 0;
        margin-top: -3rem;
    }

    .tools-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .tool-card {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        display: flex;
        gap: 1.5rem;
        text-decoration: none;
        color: inherit;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        border: 1px solid #e2e8f0;
        align-items: flex-start;
    }

    .tool-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border-color: #3b82f6;
    }

    .tool-icon {
        font-size: 2.5rem;
        background: #eff6ff;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        flex-shrink: 0;
    }

    .tool-content h2 {
        font-size: 1.5rem;
        color: #1e293b;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .tool-content p {
        color: #64748b;
        margin-bottom: 1.5rem;
        line-height: 1.6;
    }

    .tool-link {
        color: #3b82f6;
        font-weight: 600;
        font-size: 1rem;
    }

    .coming-soon {
        opacity: 0.8;
        cursor: default;
    }

    .coming-soon:hover {
        transform: none;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        border-color: #e2e8f0;
    }

    .coming-soon .tool-icon {
        background: #f1f5f9;
        filter: grayscale(100%);
    }

    .tool-status {
        background: #f1f5f9;
        color: #64748b;
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.875rem;
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .hero-section {
            padding: 4rem 0;
        }

        .hero-section h1 {
            font-size: 2.25rem;
        }

        .tool-card {
            flex-direction: column;
            text-align: center;
            align-items: center;
        }
    }
</style>
