---
/** BaseLayout.astro â€” site-wide skeleton */
export interface Props {
  title?: string;
  description?: string;
  pageId?: string;
  image?: string;
}
const { title = "Paramount Property Restoration", description = "", pageId, image } = Astro.props as Partial<Props>;
const segments = Astro.url.pathname.split('/').filter(Boolean);
const inferred = segments[0] ?? "home";
const computedPageId = (pageId && pageId.trim()) ? pageId.trim() : inferred;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" href="/favicon.ico" />
    <!-- Page-specific head slot (SEO, OG tags, JSON-LD, etc.) -->
    <slot name="head" />
    <style>
      .site-main { min-height: 40vh; }
    </style>
  </head>
  <body data-page={computedPageId}>
    <header class="site-header">
      <Header />
    </header>
    <main id="main-content" class="site-main">
      <slot />
    </main>
    <Footer />
  </body>
</html>