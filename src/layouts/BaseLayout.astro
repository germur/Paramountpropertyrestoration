---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Breadcrumbs from "../components/Breadcrumbs.jsx";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Florida's complete property partner: 24/7 emergency restoration (water, fire, mold, storm) + professional remodeling services. Licensed, insured, rapid response.",
  image = "/images/og-image.jpg",
} = Astro.props;

// Lógica para generar migas de pan dinámicamente a partir de la ruta.
const pathname = Astro.url.pathname;
const segments = pathname.split('/').filter(Boolean);
let pathSoFar = '';
const crumbs = segments.map(segment => {
  pathSoFar += `/${segment}`;
  const label = segment
    .replace(/-/g, ' ')
    .replace(/\b\w/g, char => char.toUpperCase());

  return {
    label: label,
    href: pathSoFar,
  };
});
const breadcrumbData = [{ label: 'Home', href: '/' }, ...crumbs];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* Fallback mínimo SOLO si la página no inyecta <SEOHead slot="head" /> */}
    {!Astro.slots.has('head') && (
      <>
        <title>{title}</title>
        <meta name="description" content={description} />
      </>
    )}
    {/* Aquí las páginas inyectan su SEO (SEOHead) */}
    <slot name="head" />

    {/* Favicon actualizado */}
    <link rel="icon" type="image/png" sizes="16x16" href="/faivicon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/faivicon.png" />
    <link rel="apple-touch-icon" href="/faivicon.png" />
    <link rel="shortcut icon" href="/faivicon.png" />
    <link rel="icon" type="image/x-icon" href="/faivicon.png" />

    {/* Google Analytics */}
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-HW8CW41S53" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-HW8CW41S53', {
        'site_name': 'Paramount Property Restoration',
        'custom_map': {
          'custom_parameter_1': 'service_type'
        }
      });
    </script>

    {/* Preconnect para performance */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://www.googletagmanager.com">
  </head>
  <body>
    <Header />
    <main>
      {/* Migas solo si no estamos en el home */}
      {breadcrumbData.length > 1 && (
        <div class="container">
          <Breadcrumbs client:load crumbs={breadcrumbData} />
        </div>
      )}
      <slot />
    </main>
    <Footer />

    {/* Script para detectar intent de usuario */}
    <script is:inline>
      // Detectar si el usuario viene por emergencia basado en la URL o referrer
      document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname.toLowerCase();
        const emergencyKeywords = ['water-damage', 'fire-damage', 'mold', 'emergency', 'flood', 'storm', 'restoration'];
        const isEmergencyVisit = emergencyKeywords.some(keyword => currentPath.includes(keyword));
        
        if (isEmergencyVisit) {
          // Tracking para visitas de emergencia
          if (typeof gtag !== 'undefined') {
            gtag('event', 'emergency_page_visit', {
              'event_category': 'Emergency',
              'event_label': currentPath
            });
          }
        }
      });
    </script>
  </body>
</html>