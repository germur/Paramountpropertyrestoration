---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Breadcrumbs from "../components/Breadcrumbs.jsx";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Florida's complete property partner: 24/7 emergency restoration (water, fire, mold, storm) + professional remodeling services. Licensed, insured, rapid response.",
  image = "/images/og-image.jpg",
} = Astro.props;

// Generaci칩n de URLs absolutas para un SEO robusto.
const siteUrl =
  Astro.site?.toString() || `${Astro.url.protocol}//${Astro.url.host}`;
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const imageURL = new URL(image, siteUrl);

// L칩gica para generar migas de pan din치micamente a partir de la ruta.
const pathname = Astro.url.pathname;
const segments = pathname.split('/').filter(Boolean);
let pathSoFar = '';
const crumbs = segments.map(segment => {
  pathSoFar += `/${segment}`;
  const label = segment
    .replace(/-/g, ' ')
    .replace(/\b\w/g, char => char.toUpperCase());

  return {
    label: label,
    href: pathSoFar,
  };
});
const breadcrumbData = [{ label: 'Home', href: '/' }, ...crumbs];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    {/* Keywords globales para PPR */}
    <meta name="keywords" content="property restoration Florida, emergency restoration, water damage restoration, fire damage restoration, mold remediation, storm damage restoration, kitchen remodeling, bathroom remodeling, general contractor Florida, 24/7 emergency response" />

    {/* Metatags para Open Graph (Facebook, etc.) */}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Paramount Property Restoration" />

    {/* Metatags para Twitter Cards */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={imageURL} />

    {/* Favicon actualizado */}
    <link rel="icon" type="image/png" href="/ppr-logo.png" />
    <link rel="apple-touch-icon" href="/ppr-logo.png" />

    {/* Schema.org para negocio local dual */}
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Paramount Property Restoration",
        "description": "Emergency property restoration and professional remodeling services in Florida",
        "url": "https://paramountpropertyrestoration.com",
        "telephone": "+1-786-602-2217",
        "email": "services@paramountpropertyrestoration.com",
        "address": {
          "@type": "PostalAddress",
          "addressRegion": "Florida",
          "addressCountry": "US"
        },
        "areaServed": {
          "@type": "State",
          "name": "Florida"
        },
        "serviceType": [
          "Emergency Water Damage Restoration",
          "Fire Damage Restoration", 
          "Mold Remediation",
          "Storm Damage Restoration",
          "Kitchen Remodeling",
          "Bathroom Remodeling",
          "General Contracting",
          "Home Additions"
        ],
        "openingHours": "Mo-Su 00:00-23:59",
        "priceRange": "$$",
        "image": "https://paramountpropertyrestoration.com/images/og-image.jpg",
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Property Restoration & Remodeling Services",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Emergency Water Damage Restoration",
                "description": "24/7 emergency water damage restoration and cleanup"
              }
            },
            {
              "@type": "Offer", 
              "itemOffered": {
                "@type": "Service",
                "name": "Kitchen Remodeling",
                "description": "Complete kitchen renovation and remodeling services"
              }
            }
          ]
        }
      }
    </script>

    {/* Google Analytics actualizado */}
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-HW8CW41S53" is:inline></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-HW8CW41S53', {
        'site_name': 'Paramount Property Restoration',
        'custom_map': {
          'custom_parameter_1': 'service_type'
        }
      });
    </script>

    {/* Preconnect para performance */}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://www.googletagmanager.com">
  </head>
  <body>
    <Header />
    <main>
      {/* Renderizado condicional: Las migas de pan solo aparecen si no estamos en la p치gina de inicio. */}
      {breadcrumbData.length > 1 && (
        <div class="container">
          <Breadcrumbs client:load crumbs={breadcrumbData} />
        </div>
      )}
      <slot />
    </main>
    <Footer />

    {/* Script para detectar intent de usuario */}
    <script is:inline>
      // Detectar si el usuario viene por emergencia basado en la URL o referrer
      document.addEventListener('DOMContentLoaded', function() {
        const currentPath = window.location.pathname.toLowerCase();
        const emergencyKeywords = ['water-damage', 'fire-damage', 'mold', 'emergency', 'flood', 'storm', 'restoration'];
        const isEmergencyVisit = emergencyKeywords.some(keyword => currentPath.includes(keyword));
        
        if (isEmergencyVisit) {
          // Tracking para visitas de emergencia
          if (typeof gtag !== 'undefined') {
            gtag('event', 'emergency_page_visit', {
              'event_category': 'Emergency',
              'event_label': currentPath
            });
          }
        }
      });
    </script>
  </body>
</html>