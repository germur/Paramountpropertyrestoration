---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Breadcrumbs from "../components/Breadcrumbs.jsx";
import CookieConsent from "../components/CookieConsent.jsx";
import "../styles/global.css";

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Florida's complete property partner: 24/7 emergency restoration (water, fire, mold, storm) + professional remodeling services. Licensed, insured, rapid response.",
  image = "/images/og-image.webp",
} = Astro.props;

// Lógica para generar migas de pan dinámicamente a partir de la ruta.
const pathname = Astro.url.pathname;
const segments = pathname.split("/").filter(Boolean);
let pathSoFar = "";
const crumbs = segments.map((segment) => {
  pathSoFar += `/${segment}`;
  const label = segment
    .replace(/-/g, " ")
    .replace(/\b\w/g, (char) => char.toUpperCase());

  return {
    label: label,
    href: pathSoFar,
  };
});
const breadcrumbData = [{ label: "Home", href: "/" }, ...crumbs];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {/* Fallback mínimo SOLO si la página no inyecta <SEOHead slot="head" /> */}
    {
      !Astro.slots.has("head") && (
        <>
          <title>{title}</title>
          <meta name="description" content={description} />
        </>
      )
    }
    {/* Aquí las páginas inyectan su SEO (SEOHead) */}
    <slot name="head" />

    {/* Favicon */}
    <link rel="icon" type="image/png" href="/favicon.png?v=2" />
    <link rel="apple-touch-icon" href="/favicon.png?v=2" />
    <link rel="shortcut icon" href="/favicon.png?v=2" />

    {/* Google Tag Manager */}
    <script is:inline>
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-WG5DT6GN");
    </script>

    {/* Google AdSense */}
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7161830191523275"
      crossorigin="anonymous"></script>

    {/* Preconnect para performance */}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://www.googletagmanager.com" />
  </head>
  <body>
    {/* Google Tag Manager (noscript) */}
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WG5DT6GN"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >

    <Header />
    <main>
      {/* Migas solo si no estamos en el home */}
      {
        breadcrumbData.length > 1 && (
          <div class="container">
            <Breadcrumbs client:load crumbs={breadcrumbData} />
          </div>
        )
      }
      <slot />
    </main>
    <Footer />

    <!-- Cookie Consent Banner -->
    <CookieConsent client:load />

    {/* Script para detectar intent de usuario */}
    <script is:inline>
      document.addEventListener("DOMContentLoaded", function () {
        const currentPath = window.location.pathname.toLowerCase();
        const emergencyKeywords = [
          "water-damage",
          "fire-damage",
          "mold",
          "emergency",
          "flood",
          "storm",
          "restoration",
        ];
        const isEmergencyVisit = emergencyKeywords.some((keyword) =>
          currentPath.includes(keyword),
        );

        if (isEmergencyVisit) {
          window.dataLayer = window.dataLayer || [];
          window.dataLayer.push({
            event: "emergency_page_visit",
            event_category: "Emergency",
            event_label: currentPath,
          });
        }
      });
    </script>
  </body>
</html>
