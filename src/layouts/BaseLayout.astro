<footer class="site-footer" role="contentinfo" data-footer-version="v2">
  <!-- Emergency CTA bar -->
  <section class="footer-cta" aria-label="Emergency contact and free inspection">
    <div class="container cta-inner">
      <div class="cta-copy">
        <h3>Need help now?</h3>
        <p>Get a free on‑site inspection. 24/7 response across Florida.</p>
      </div>
      <div class="cta-actions">
        <a class="btn btn-primary" href="tel:+17866022217" aria-label="Call Paramount Property Restoration">Call (786) 602‑2217</a>
        <a class="btn btn-outline" href="/contact" aria-label="Request help">Request Help</a>
      </div>
    </div>
  </section>

  <!-- Main footer content -->
  <div class="container footer-grid">
    <div class="brand-col">
      <a href="/" class="brand" aria-label="Paramount Property Restoration — Home">
        <img src="/images/ppr-logo.png" width="180" height="60" alt="Paramount Property Restoration logo" />
      </a>
      <p class="brand-blurb">
        Florida's complete property partner for emergency restoration and professional remodeling services.
      </p>
    </div>

    <nav class="links-col" aria-labelledby="emergency-heading">
      <h4 id="emergency-heading">Emergency Restoration</h4>
      <ul>
        <li><a href="/restoration/water-damage">Water Damage</a></li>
        <li><a href="/restoration/fire-damage">Fire Damage</a></li>
        <li><a href="/restoration/mold-remediation">Mold Remediation</a></li>
        <li><a href="/restoration/storm-damage">Storm Damage</a></li>
        <li><a href="/restoration/mitigation-services">Mitigation Services</a></li>
      </ul>
    </nav>

    <nav class="links-col" aria-labelledby="remodel-heading">
      <h4 id="remodel-heading">Remodeling Services</h4>
      <ul>
        <li><a href="/services/kitchen-remodeling">Kitchen Remodeling</a></li>
        <li><a href="/services/bathroom-remodeling">Bathroom Remodeling</a></li>
        <li><a href="/services/home-additions-remodeling">Home Additions</a></li>
        <li><a href="/services/living-dining-remodeling">Living &amp; Dining</a></li>
        <li><a href="/services/bedroom-remodeling">Bedroom Remodeling</a></li>
      </ul>
    </nav>

    <nav class="links-col" aria-labelledby="quick-links-heading">
      <h4 id="quick-links-heading">Quick Links</h4>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/services">All Services</a></li>
        <li><a href="/restoration">Restoration</a></li>
        <li><a href="/portfolio">Portfolio</a></li>
        <li><a href="/blog">Resources</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </div>

  <!-- Bottom bar -->
  <div class="footer-bottom">
    <div class="container bottom-inner">
      <p class="copyright">© 2025 Paramount Property Restoration. All rights reserved.</p>
      <nav aria-label="Legal links" class="legal">
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/terms-of-service">Terms of Service</a>
        <a href="/sitemap.xml">Sitemap</a>
      </nav>
    </div>
  </div>

  <style>
    /* ------- Theming (uses site variables when present) ------- */
    .site-footer {
      --footer-bg: var(--surface-900, #0f1b2a);
      --footer-card: var(--surface-800, #162334);
      --footer-border: var(--border-800, rgba(255,255,255,.06));
      --footer-text: var(--text-300, #ced7e3);
      --footer-muted: var(--text-400, #9fb0c6);
      --footer-heading: var(--text-100, #ffffff);
      --footer-accent: var(--brand-500, #2dd4bf);
      --footer-accent-600: var(--brand-600, #1fbfaf);
      --footer-accent-700: var(--brand-700, #199c90);
      color: var(--footer-text);
      background: var(--footer-bg);
    }
    .site-footer a { color: var(--footer-text); text-decoration: none; }
    .site-footer a:hover { color: var(--footer-accent); text-decoration: underline; text-underline-offset: 2px; }

    .container { width: min(1200px, 92%); margin-inline: auto; }

    /* CTA */
    .footer-cta {
      background: linear-gradient(0deg, rgba(0,0,0,.25), rgba(0,0,0,.25)), var(--footer-card);
      border-bottom: 1px solid var(--footer-border);
    }
    .cta-inner {
      display: grid;
      grid-template-columns: 1fr auto;
      align-items: center;
      gap: 1rem;
      padding: 1.25rem 0;
    }
    .cta-copy h3 {
      margin: 0 0 .25rem 0;
      color: var(--footer-heading);
      font-size: 1.1rem;
      letter-spacing: .2px;
    }
    .cta-copy p {
      margin: 0;
      color: var(--footer-muted);
      font-size: .95rem;
    }
    .cta-actions { display: flex; gap: .75rem; flex-wrap: wrap; }
    .btn {
      display: inline-flex; align-items: center; justify-content: center;
      padding: .65rem 1rem; border-radius: .55rem; font-weight: 600;
      border: 1px solid transparent; transition: background .2s, color .2s, border-color .2s, transform .05s;
      will-change: transform;
    }
    .btn:active { transform: translateY(1px); }
    .btn-primary { background: var(--footer-accent); color: #0b1320; }
    .btn-primary:hover { background: var(--footer-accent-600); }
    .btn-outline { color: var(--footer-accent); border-color: var(--footer-accent); background: transparent; }
    .btn-outline:hover { background: rgba(45,212,191,.08); }

    /* Grid */
    .footer-grid {
      display: grid;
      grid-template-columns: 1.2fr repeat(3, 1fr);
      gap: 2rem;
      padding: 2.25rem 0 1.5rem;
    }
    .brand-col .brand img { display: block; width: 200px; height: auto; filter: drop-shadow(0 1px 0 rgba(0,0,0,.25)); }
    .brand-blurb { margin-top: .75rem; color: var(--footer-muted); line-height: 1.55; max-width: 44ch; }

    .links-col h4 {
      color: var(--footer-heading);
      margin: 0 0 .75rem 0;
      font-size: 1rem;
      letter-spacing: .3px;
    }
    .links-col ul { list-style: none; padding: 0; margin: 0; display: grid; gap: .5rem; }
    .links-col a { color: var(--footer-text); }
    .links-col a:hover { color: var(--footer-accent); }

    /* Bottom bar */
    .footer-bottom {
      border-top: 1px solid var(--footer-border);
      margin-top: .5rem;
    }
    .bottom-inner {
      padding: 1rem 0;
      display: flex; align-items: center; justify-content: space-between; gap: 1rem; flex-wrap: wrap;
    }
    .copyright { margin: 0; color: var(--footer-muted); font-size: .9rem; }
    .legal { display: flex; gap: 1rem; flex-wrap: wrap; }
    .legal a { color: var(--footer-muted); }
    .legal a:hover { color: var(--footer-accent); }

    /* Responsive */
    @media (max-width: 980px) {
      .footer-grid { grid-template-columns: 1fr 1fr; }
      .brand-col { grid-column: 1 / -1; }
    }
    @media (max-width: 640px) {
      .cta-inner { grid-template-columns: 1fr; gap: .75rem; text-align: center; }
      .cta-actions { justify-content: center; }
      .footer-grid { grid-template-columns: 1fr; }
      .legal { justify-content: center; }
      .bottom-inner { justify-content: center; text-align: center; }
      .brand-col .brand img { width: 160px; }
    }
  </style>
</footer>